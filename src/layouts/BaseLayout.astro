---
import '@/styles/global.css';
import '@fontsource-variable/inconsolata';
import '@fontsource/lato';

import BaseHead from '@/components/fundations/head/BaseHead.astro';
import LogoCloud from '@/components/LogoCloud.astro';
import HeaderVue from '@/components/global/Header.vue';
import StickyCallButton from '@/components/global/StickyCallButton.vue';
import Footer from '@/components/global/Footer.astro';

const {
  title,
  description,
  keywords,
  author,
  themeColor,
  canonical,
  noindex = false,
  schemaType = 'WebPage',
  datePublished,
  dateModified,
} = Astro.props;

// Get current path for active link highlighting
const currentPath = Astro.url.pathname;
---

<!doctype html>
<html lang='en-GB' class='h-full scroll-smooth'>
  <head>
    <BaseHead
      title={title}
      description={description}
      keywords={keywords}
      author={author}
      themeColor={themeColor}
      canonical={canonical}
      noindex={noindex}
      schemaType={schemaType}
      datePublished={datePublished}
      dateModified={dateModified}
    />
  </head>
  <body class='h-full'>
    <HeaderVue client:load currentPath={currentPath}>
      <LogoCloud slot='after-nav' />
    </HeaderVue>
    <main
      id='main-content'
      class='mx-auto flex flex-col pt-32 transition-all duration-300'>
      <slot />
    </main>
    <Footer />
    <StickyCallButton client:load />
  </body>
</html>
<style is:global>
  @view-transition {
    navigation: auto;
  }
</style>
