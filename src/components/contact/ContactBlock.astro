---
import Text from '@/components/fundations/elements/Text.astro';
import { BUSINESS_CONFIG } from '@/utils/businessConfig';
---

<section class='mt-16 bg-primary-00 p-8'>
  <Text tag='h2' variant='textXL' class='mb-4 font-semibold text-white-00'>
    Questions or Concerns?
  </Text>
  <p class='mb-6 text-white-00'>
    If you have any questions about this policy or need further clarification,
    please contact us:
  </p>
  <div class='space-y-3 text-white-00'>
    <p>
      <strong>Email:</strong>
      <a
        href={`mailto:${BUSINESS_CONFIG.email}`}
        class='text-white-00 hover:underline'>
        {BUSINESS_CONFIG.email}
      </a>
    </p>
    <p>
      <strong>Phone:</strong>
      <a
        href={`tel:${BUSINESS_CONFIG.mobilePhone}`}
        class='text-white-00 hover:underline'>
        {BUSINESS_CONFIG.mobilePhone}
      </a>
    </p>
    <p>
      <strong>Address:</strong><br />
      {BUSINESS_CONFIG.address.street}<br />
      {BUSINESS_CONFIG.address.city}, {BUSINESS_CONFIG.address.postcode}
    </p>
  </div>
</section>
