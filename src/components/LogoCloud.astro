---
import { Image } from "astro:assets";

import vaillant from "@/images/brands/vaillant-installer-logo-brighton-boilers.jpg";
import viesmann from "@/images/brands/viessmann-logo-boiler-installation-brighton.jpg";
import bpec from "@/images/brands/bpec-certification-logo-gas-plumbing.png";
import checktrade from "@/images/brands/checkatrade-logo-ac-plumbers-brighton.png";
import oftec from "@/images/brands/oftec-registered-logo-heating-certification.png";
import Text from "./fundations/elements/Text.astro";
---

<div
  class="bg-gradient-to-b from-neutral-50 to-primary-700 py-24 sm:py-32"
  id="logo-cloud"
>
  <div class="mx-auto max-w-7xl px-6 lg:px-8">
    <Text
      tag="h2"
      variant="displayLG"
      class="font-lato mb-8 text-center font-semibold text-accent-600"
    >
      Trusted by Leading Brands
    </Text>

    <div
      class="mx-auto grid grid-cols-2 gap-8 md:grid-cols-3 md:gap-12 lg:grid-cols-5"
    >
      <!-- Vaillant -->
      <div
        class="backlight relative flex items-center justify-center rounded-lg bg-white p-4 shadow-md"
      >
        <Image
          class="h-16 w-auto object-contain md:h-20"
          src={vaillant}
          alt="Vaillant Advance Installer logo featuring rabbit icon"
          title="Vaillant Advance Installer – Trusted Boiler Installers in Brighton | AC Plumbers Ltd."
          width={200}
          height={100}
          format="webp"
          quality={90}
        />
      </div>

      <!-- Viesmann -->
      <div
        class="backlight relative flex items-center justify-center rounded-lg bg-white p-4 shadow-md"
      >
        <Image
          class="h-16 w-auto object-contain md:h-20"
          src={viesmann}
          alt="Viessmann logo for high-efficiency boiler systems"
          title="Viessmann Boiler Installers in Brighton – AC Plumbers Certified Partner"
          width={200}
          height={100}
          format="webp"
          quality={90}
        />
      </div>

      <!-- BPEC -->
      <div
        class="backlight relative flex items-center justify-center rounded-lg bg-white p-4 shadow-md"
      >
        <Image
          class="h-16 w-auto object-contain md:h-20"
          src={bpec}
          alt="BPEC Certification Ltd logo – plumbing and gas accreditation"
          title="BPEC Certification – Recognised Plumbing and Gas Training Body in the UK"
          width={200}
          height={100}
          format="webp"
          quality={90}
        />
      </div>

      <!-- Checkatrade -->
      <div
        class="backlight relative flex items-center justify-center rounded-lg bg-white p-4 shadow-md"
      >
        <Image
          class="h-16 w-auto object-contain md:h-20"
          src={checktrade}
          alt="Checkatrade logo with tagline 'Where reputation matters’"
          title="AC Plumbers Ltd. on Checkatrade – Trusted Plumbers in Brighton with Verified Reviews"
          width={200}
          height={100}
          format="webp"
          quality={90}
        />
      </div>

      <!-- OFTEC -->
      <div
        class="backlight relative col-span-2 flex items-center justify-center rounded-lg bg-white p-4 shadow-md md:col-span-1"
      >
        <Image
          class="h-16 w-auto object-contain md:h-20"
          src={oftec}
          alt="OFTEC Registered Business logo for oil and heating certification"
          title="OFTEC Registered Business logo for oil and heating certification "
          width={200}
          height={100}
          format="webp"
          quality={90}
        />
      </div>
    </div>
  </div>
</div>

<style>
  /*  #logo-cloud {
    background: var(--color-primary-600);
    position: relative;
    overflow: hidden;
  } */

  /*  .backlight {
    overflow: visible;
    position: relative;
    z-index: 1;
  } */

  .backlight::after {
    content: "";
    width: 100%;
    height: 100%;
    position: absolute;
    top: 0;
    left: 0; /* Added left:0 */
    background: inherit; /* Explicit background */
    filter: blur(20px) brightness(150);
    transform: scale(1.1);
    z-index: -1;
    opacity: 0.7;
    border-radius: 8px; /* Match your rounded-lg */
  }
</style>
