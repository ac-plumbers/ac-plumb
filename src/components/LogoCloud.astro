---
import { Image } from "astro:assets";

import vaillant from "@/images/brands/vaillant-logo.jpg";
import viesmann from "@/images/brands/viesmann-logo.jpg";
import bpec from "@/images/brands/bpec-logo.png";
import checktrade from "@/images/brands/checkatrade-logo.png";
import oftec from "@/images/brands/oftec-logo.png";
import Text from "./fundations/elements/Text.astro";
---

<div class="py-24 sm:py-32" id="logo-cloud">
  <div class="mx-auto max-w-7xl px-6 lg:px-8">
    <Text
      tag="h2"
      variant="displayLG"
      class="mb-8 text-center font-poppins font-semibold text-white"
    >
      Trusted by Leading Brands
    </Text>

    <div
      class="mx-auto grid grid-cols-2 gap-8 md:grid-cols-3 md:gap-12 lg:grid-cols-5"
    >
      <!-- Vaillant -->
      <div
        class="backlight relative flex items-center justify-center rounded-lg bg-white p-4 shadow-md"
      >
        <Image
          class="h-16 w-auto object-contain md:h-20"
          src={vaillant}
          alt="Vaillant"
          width={200}
          height={100}
          format="webp"
          quality={90}
        />
      </div>

      <!-- Viesmann -->
      <div
        class="backlight relative flex items-center justify-center rounded-lg bg-white p-4 shadow-md"
      >
        <Image
          class="h-16 w-auto object-contain md:h-20"
          src={viesmann}
          alt="Viesmann"
          width={200}
          height={100}
          format="webp"
          quality={90}
        />
      </div>

      <!-- BPEC -->
      <div
        class="backlight relative flex items-center justify-center rounded-lg bg-white p-4 shadow-md"
      >
        <Image
          class="h-16 w-auto object-contain md:h-20"
          src={bpec}
          alt="BPEC"
          width={200}
          height={100}
          format="webp"
          quality={90}
        />
      </div>

      <!-- Checkatrade -->
      <div
        class="backlight relative flex items-center justify-center rounded-lg bg-white p-4 shadow-md"
      >
        <Image
          class="h-16 w-auto object-contain md:h-20"
          src={checktrade}
          alt="Checkatrade"
          width={200}
          height={100}
          format="webp"
          quality={90}
        />
      </div>

      <!-- OFTEC -->
      <div
        class="backlight relative col-span-2 flex items-center justify-center rounded-lg bg-white p-4 shadow-md md:col-span-1"
      >
        <Image
          class="h-16 w-auto object-contain md:h-20"
          src={oftec}
          alt="OFTEC"
          width={200}
          height={100}
          format="webp"
          quality={90}
        />
      </div>
    </div>
  </div>
</div>

<style>
  #logo-cloud {
    background: var(--color-primary-600);
    position: relative;
    overflow: hidden;
  }

  /*  .backlight {
    overflow: visible;
    position: relative;
    z-index: 1;
  } */

  .backlight::after {
    content: "";
    width: 100%;
    height: 100%;
    position: absolute;
    top: 0;
    left: 0; /* Added left:0 */
    background: inherit; /* Explicit background */
    filter: blur(20px) brightness(150);
    transform: scale(1.1);
    z-index: -1;
    opacity: 0.7;
    border-radius: 8px; /* Match your rounded-lg */
  }
</style>
