---
import { Image } from 'astro:assets';

import vaillant from '@/images/brands/vaillant-logo.jpg';
import viesmann from '@/images/brands/viesmann-logo.jpg';
import bpec from '@/images/brands/bpec-logo.png';
import checktrade from '@/images/brands/checkatrade-logo.png';
import oftec from '@/images/brands/oftec-logo.png';
import Text from './fundations/elements/Text.astro';
---

<div class='py-24 sm:py-32' id='logo-cloud'>
  <div class='mx-auto max-w-7xl px-6 lg:px-8'>
    <Text
      tag='h2'
      variant='displayMD'
      class='text-center font-semibold mb-8 font-poppins text-white'>
      Trusted by Leading Brands
    </Text>

    <div
      class='mx-auto grid grid-cols-2 md:grid-cols-3 lg:grid-cols-5 gap-8 md:gap-12'>
      <!-- Vaillant -->
      <div
        class='bg-white p-4 rounded-lg shadow-md flex items-center justify-center backlight relative'>
        <Image
          class='h-16 md:h-20 w-auto object-contain'
          src={vaillant}
          alt='Vaillant'
          width={200}
          height={100}
          format='webp'
          quality={90}
        />
      </div>

      <!-- Viesmann -->
      <div
        class='bg-white p-4 rounded-lg shadow-md flex items-center justify-center backlight relative'>
        <Image
          class='h-16 md:h-20 w-auto object-contain'
          src={viesmann}
          alt='Viesmann'
          width={200}
          height={100}
          format='webp'
          quality={90}
        />
      </div>

      <!-- BPEC -->
      <div
        class='bg-white p-4 rounded-lg shadow-md flex items-center justify-center backlight relative'>
        <Image
          class='h-16 md:h-20 w-auto object-contain'
          src={bpec}
          alt='BPEC'
          width={200}
          height={100}
          format='webp'
          quality={90}
        />
      </div>

      <!-- Checkatrade -->
      <div
        class='bg-white p-4 rounded-lg shadow-md flex items-center justify-center backlight relative'>
        <Image
          class='h-16 md:h-20 w-auto object-contain'
          src={checktrade}
          alt='Checkatrade'
          width={200}
          height={100}
          format='webp'
          quality={90}
        />
      </div>

      <!-- OFTEC -->
      <div
        class='bg-white p-4 rounded-lg shadow-md flex items-center justify-center md:col-span-1 col-span-2 backlight relative'>
        <Image
          class='h-16 md:h-20 w-auto object-contain'
          src={oftec}
          alt='OFTEC'
          width={200}
          height={100}
          format='webp'
          quality={90}
        />
      </div>
    </div>
  </div>
</div>

<style>
  #logo-cloud {
    background: var(--color-primary-600);
    position: relative;
    overflow: hidden;
  }

  .backlight {
    overflow: visible;
    position: relative;
    z-index: 1;
  }

  .backlight::after {
    content: '';
    width: 100%;
    height: 100%;
    position: absolute;
    top: 0;
    left: 0; /* Added left:0 */
    background: inherit; /* Explicit background */
    filter: blur(20px) brightness(150);
    transform: scale(1.1);
    z-index: -1;
    opacity: 0.7;
    border-radius: 8px; /* Match your rounded-lg */
  }
</style>
