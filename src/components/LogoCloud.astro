---
import { Image } from 'astro:assets';

import vaillant from '@/images/brands/vaillant-logo.jpg';
import viesmann from '@/images/brands/viesmann-logo.jpg';
import bpec from '@/images/brands/bpec-logo.png';
import checktrade from '@/images/brands/checkatrade-logo.png';
import oftec from '@/images/brands/oftec-logo.png';
---

<div class='py-24 sm:py-32' id='logo-cloud'>
  <div class='mx-auto max-w-7xl px-6 lg:px-8'>
    <h2 class='text-center text-xl font-bold text-white mb-8'>
      Trusted by Leading Brands
    </h2>

    <div
      class='mx-auto grid grid-cols-2 md:grid-cols-3 lg:grid-cols-5 gap-8 md:gap-12'>
      <!-- Vaillant -->
      <div
        class='bg-white p-4 rounded-lg shadow-md flex items-center justify-center'>
        <Image
          class='h-16 md:h-20 w-auto object-contain'
          src={vaillant}
          alt='Vaillant'
          width={200}
          height={100}
          format='webp'
          quality={90}
        />
      </div>

      <!-- Viesmann -->
      <div
        class='bg-white p-4 rounded-lg shadow-md flex items-center justify-center'>
        <Image
          class='h-16 md:h-20 w-auto object-contain'
          src={viesmann}
          alt='Viesmann'
          width={200}
          height={100}
          format='webp'
          quality={90}
        />
      </div>

      <!-- BPEC -->
      <div
        class='bg-white p-4 rounded-lg shadow-md flex items-center justify-center'>
        <Image
          class='h-16 md:h-20 w-auto object-contain'
          src={bpec}
          alt='BPEC'
          width={200}
          height={100}
          format='webp'
          quality={90}
        />
      </div>

      <!-- Checkatrade -->
      <div
        class='bg-white p-4 rounded-lg shadow-md flex items-center justify-center'>
        <Image
          class='h-16 md:h-20 w-auto object-contain'
          src={checktrade}
          alt='Checkatrade'
          width={200}
          height={100}
          format='webp'
          quality={90}
        />
      </div>

      <!-- OFTEC -->
      <div
        class='bg-white p-4 rounded-lg shadow-md flex items-center justify-center md:col-span-1 col-span-2'>
        <Image
          class='h-16 md:h-20 w-auto object-contain'
          src={oftec}
          alt='OFTEC'
          width={200}
          height={100}
          format='webp'
          quality={90}
        />
      </div>
    </div>
  </div>
</div>

<style>
  #logo-cloud {
    background: var(--color-primary-600);
    /*  background: linear-gradient(
      180deg,
      var(--color-primary-500) 0%,
      var(--color-accent-900) 100%
    ); */
  }
</style>
