---
import { AstroSeo } from "@astrolib/seo";

export interface Props {
  title?: string;
  description?: string;
  canonical?: string;
  noindex?: boolean;
  ogImage?: string;
  ogType?: string;
}

const {
  title = "AC Plumbers Ltd. | Plumbing, Heating & Renewable Services in Brighton",
  description = "AC Plumbers Ltd. provides top-notch plumbing, heating, and renewable energy services in Brighton. Our team is dedicated to delivering high-quality solutions with a focus on customer satisfaction.",
  canonical = "https://acplumb.co.uk",
  noindex = false,
  ogImage = "https://acplumb.co.uk/images/ac-plumbers-hero.jpg",
  ogType = "website",
} = Astro.props;
---

<AstroSeo
  title={title}
  description={description}
  canonical={canonical}
  noindex={noindex}
  openGraph={{
    url: canonical,
    title: title,
    description: description,
    images: [
      {
        url: ogImage,
        width: 1200,
        height: 630,
        alt: "AC Plumbers Ltd - Professional Plumbing Services",
        type: "image/jpeg",
      },
    ],
    site_name: "AC Plumbers Ltd",
    type: ogType,
    locale: "en_GB",
  }}
/>

<!-- Structured Data (JSON-LD) -->
<script type="application/ld+json">
  {
    "@context": "https://schema.org",
    "@type": "LocalBusiness",
    "name": "AC Plumbers Ltd",
    "description": "Professional plumbing, heating, and renewable energy services in Brighton",
    "url": "https://acplumb.co.uk",
    "telephone": "+44 7535 653 850",
    "address": {
      "@type": "PostalAddress",
      "streetAddress": "21j Campbell Road",
      "addressLocality": "Brighton",
      "postalCode": "BN1 4QD",
      "addressCountry": "GB"
    },
    "geo": {
      "@type": "GeoCoordinates",
      "latitude": "50.8225",
      "longitude": "-0.1372"
    },
    "openingHours": "Mo-Su 00:00-23:59",
    "serviceArea": {
      "@type": "GeoCircle",
      "geoMidpoint": {
        "@type": "GeoCoordinates",
        "latitude": "50.8225",
        "longitude": "-0.1372"
      },
      "geoRadius": "50000"
    },
    "services": [
      "Emergency Plumbing",
      "Boiler Installation",
      "Central Heating",
      "Gas Safety Checks",
      "Landlord Services"
    ],
    "priceRange": "££",
    "image": "https://acplumb.co.uk/images/ac-plumbers-hero.jpg"
  }
</script>
