---
import { AstroSeo } from "@astrolib/seo";

export interface Props {
  title?: string;
  description?: string;
  canonical?: string;
  noindex?: boolean;
}

const {
  title = "AC Plumbers Ltd. | Plumbing, Heating & Renewable Services in Brighton",
  description = "AC Plumbers Ltd. provides top-notch plumbing, heating, and renewable energy services in Brighton. Our team is dedicated to delivering high-quality solutions with a focus on customer satisfaction.",
  canonical = "https://acplumb.co.uk",
  noindex = false,
} = Astro.props;
---

<AstroSeo
  title={title}
  description={description}
  canonical={canonical}
  noindex={noindex}
  openGraph={{
    url: canonical,
    title: title,
    description: description,
    images: [
      {
        url: "https://acplumb.co.uk/images/ac-plumbers-hero.jpg",
        width: 1200,
        height: 630,
        alt: "AC Plumbers Ltd - Professional Plumbing Services",
        type: "image/jpeg",
      },
    ],
    site_name: "AC Plumbers Ltd",
    type: "website",
  }}
  twitter={{
    handle: "@acplumbersltd",
    site: "@acplumbersltd",
    cardType: "summary_large_image",
    title: title,
    description: description,
  }}
/>
