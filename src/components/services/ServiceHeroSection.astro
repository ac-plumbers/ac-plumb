---
type Props = {
  title: string;
  description: string;
  image: string;
  alt?: string;
};
const { title, description, image, alt } = Astro.props;
---

<div
  class="relative bg-gradient-to-r from-primary-900 to-primary-800 py-16 sm:py-24"
>
  <div class="absolute inset-0 opacity-20">
    <img src={image} alt={alt} class="h-full w-full object-cover" />
  </div>
  <div class="relative mx-auto max-w-7xl px-4 sm:px-6 lg:px-8">
    <div class="md:w-2/3">
      <h1 class="text-4xl font-bold tracking-tight text-white sm:text-5xl">
        {title}
      </h1>
      <p class="mt-6 max-w-3xl text-xl text-neutral-200">
        {description}
      </p>
      <div class="mt-10 flex items-center gap-x-6">
        <a
          href="/contact"
          class="rounded-md bg-accent-500 px-6 py-3 text-base font-semibold text-white shadow-sm hover:bg-accent-400 focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2"
        >
          Get a Quote
        </a>
        <a
          href="#service-details"
          class="text-base leading-6 font-semibold text-white hover:text-accent-200"
        >
          Learn more <span aria-hidden="true">â†’</span>
        </a>
      </div>
    </div>
  </div>
</div>
