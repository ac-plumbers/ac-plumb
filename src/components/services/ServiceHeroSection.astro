---
import Text from '../fundations/elements/Text.astro';

type Props = {
  title: string;
  description: string;
  image: string;
  alt?: string;
};
const { title, description, image, alt } = Astro.props;

// Provide fallback alt text for better accessibility
const imageAlt =
  alt && alt.trim() !== '' ? alt : `${title} service background image`;
---

<section
  id='service-hero'
  class='relative bg-gradient-to-r from-primary-900 to-primary-800 pt-32 pb-16 sm:pt-40 sm:pb-24'
  role='banner'
  aria-labelledby='service-hero-title'>
  <div class='absolute inset-0 opacity-50' aria-hidden='true'>
    <img
      src={image}
      alt={imageAlt}
      class='h-full w-full object-cover'
      role='presentation'
      loading='eager'
    />
  </div>
  <div class='relative mx-auto max-w-7xl px-4 sm:px-6 lg:px-8'>
    <div class='md:w-2/3'>
      <Text
        tag='h1'
        variant='displayXL'
        id='service-hero-title'
        class='mt-8 font-bold tracking-tight text-white'>
        {title}
      </Text>
      <Text
        tag='p'
        variant='displayBASE'
        class='mt-6 max-w-3xl text-neutral-200'>
        {description}
      </Text>
      <div class='mt-10 flex items-center gap-x-6'>
        <a
          href='/contact-us'
          class='rounded-md bg-accent-500 px-6 py-3 font-lato text-base font-semibold text-white shadow-sm transition-colors duration-200 hover:bg-accent-400 focus-visible:outline focus-visible:outline-offset-2 focus-visible:outline-accent-400'
          aria-describedby='service-hero-title'>
          Get a Quote
        </a>
      </div>
    </div>
  </div>
</section>
