---
import Text from '../fundations/elements/Text.astro';
import Link from '../fundations/elements/Link.astro';

type Props = {
  title: string;
  description: string;
  image: string;
  alt?: string;
};
const { title, description, image, alt } = Astro.props;

// Provide fallback alt text for better accessibility
const imageAlt =
  alt && alt.trim() !== '' ? alt : `${title} service background image`;
---

<section
  id='service-hero'
  class='relative bg-gradient-to-r from-primary-900 to-primary-800 pt-32 pb-16 sm:pt-40 sm:pb-24'
  role='banner'
  aria-labelledby='service-hero-title'>
  <div class='absolute inset-0 opacity-50' aria-hidden='true'>
    <picture>
      <source
        srcset={image
          .replace('/images/services/', '/images/services/optimized/')
          .replace(/\.(jpg|jpeg|png)$/i, '-400w.webp')}
        type='image/webp'
      />
      <img
        src={image}
        alt={imageAlt}
        class='h-full w-full object-cover'
        role='presentation'
        loading='lazy'
        width='400'
        height='540'
        decoding='async'
      />
    </picture>
  </div>
  <div class='relative mx-auto max-w-7xl px-4 sm:px-6 lg:px-8'>
    <div class='md:w-2/3'>
      <Text
        tag='h1'
        variant='display2XL'
        id='service-hero-title'
        class='mt-8 font-bold tracking-tight text-white'>
        {title}
      </Text>
      <Text tag='p' variant='textLG' class='mt-6 max-w-3xl text-neutral-200'>
        {description}
      </Text>
      <div class='mt-10 flex items-center gap-x-6'>
        <Link href='/contact-us' variant='accent-button' size='lg'>
          <span class='text-2xl uppercase sm:text-base'>Get a Quote</span>
        </Link>
      </div>
    </div>
  </div>
</section>
