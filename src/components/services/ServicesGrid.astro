---
const { services } = Astro.props;
// Sort services by 'sortedOrder' frontmatter, defaulting to 999 if not set
const sortedServices = [...services].sort((a, b) => (a.data.sortedOrder || 999) - (b.data.sortedOrder || 999));
import Text from "../fundations/elements/Text.astro";
---

<div class="grid gap-6 sm:grid-cols-2 lg:grid-cols-3">
  {sortedServices.map((service: any) => (
    <div class="service-card group relative overflow-hidden rounded-xl bg-white border border-neutral-200 shadow-sm hover:shadow-lg hover:border-primary-300 transition-all duration-300">
      <a href={`/services/${service.slug}`} class="block h-full">


        {service.data.image && (
          <div class="aspect-[3/2] overflow-hidden bg-neutral-100">
            <img src={'/' + service.data.image.replace(/^\//, '')} alt={service.data.title}
              class="h-full aspect-[3/2] w-full object-cover transition-transform duration-300 group-hover:scale-105 shadow"
              loading="lazy"
              width="600"
              height="400"
            />
          </div>
        )}

        <!-- Card Content -->
        <div class="p-6 space-y-4">
          <!-- Service Title -->
          <Text tag="h3" variant="displayXS" class="text-xl font-bold text-neutral-900 group-hover:text-primary-600 transition-colors duration-200 leading-tight">
            {service.data.title}
          </Text>

          <!-- Service Description -->
          <Text tag="p" variant="textBASE" class="text-neutral-700 leading-relaxed line-clamp-3">
            {service.data.description}
          </Text>

          {/* <!-- Tags -->
          {service.data.tags && service.data.tags.length > 0 && (
            <div class="flex flex-wrap gap-1.5">
              {service.data.tags.slice(0, 3).map((tag: string) => (
                <span class="inline-flex items-center rounded-md bg-primary-50 px-2 py-1 text-xs font-medium text-primary-700 border border-primary-200">
                  {tag}
                </span>
              ))}
              {service.data.tags.length > 3 && (
                <span class="text-xs text-neutral-400 self-center">
                  +{service.data.tags.length - 3} more
                </span>
              )}
            </div>
          )} */}

          <!-- Price and CTA -->
          <div class="flex items-end justify-between pt-2 border-t border-neutral-100">

            <div class="inline-flex items-center text-primary-600 hover:text-primary-700 font-semibold text-sm group-hover:translate-x-1 transition-transform duration-200">
              Learn More
              <svg class="ml-1 h-4 w-4" fill="none" stroke="currentColor" viewBox="0 0 24 24" aria-hidden="true" focusable="false">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"/>
              </svg>
            </div>
          </div>
        </div>

        <!-- Hover Overlay Effect -->
        <div class="absolute inset-0 bg-gradient-to-t from-primary-600/5 to-transparent opacity-0 group-hover:opacity-100 transition-opacity duration-300 pointer-events-none"></div>
      </a>
    </div>
  ))}
</div>

<style>
  .line-clamp-3 {
    display: -webkit-box;
    -webkit-line-clamp: 3;
    -webkit-box-orient: vertical;
    overflow: hidden;
  }
</style>