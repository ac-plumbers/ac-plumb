---
// src/components/services/ServicesGrid.astro
import { Image } from 'astro:assets';

const { services } = Astro.props;
---

<div class="grid gap-6 sm:grid-cols-2 lg:grid-cols-3">
  {services.map((service: any) => (
    <div class="service-card group relative overflow-hidden rounded-xl bg-white border border-neutral-200 shadow-sm hover:shadow-lg hover:border-primary-300 transition-all duration-300">
      <a href={`/services/${service.slug}`} class="block h-full">

        <!-- Service Image -->
        {service.data.image && (
          <div class="aspect-video overflow-hidden bg-neutral-100">
            <img
              src={service.data.image}
              alt={service.data.title}
              class="h-full w-full object-cover transition-transform duration-300 group-hover:scale-105"
              loading="lazy"
              width="400"
              height="225"
            />
          </div>
        )}

        <!-- Card Content -->
        <div class="p-6 space-y-4">

          <!-- Featured Badge & Category -->
          <div class="flex items-center justify-between">
            {service.data.featured && (
              <span class="inline-flex items-center rounded-full bg-accent-100 px-2.5 py-0.5 text-xs font-medium text-accent-800">
                ⭐ Featured
              </span>
            )}

            {service.data.category && (
              <span class="text-xs font-medium text-neutral-500 bg-neutral-100 px-2.5 py-1 rounded-full">
                {service.data.category.split('-').map((word: string) =>
                  word.charAt(0).toUpperCase() + word.slice(1)
                ).join(' ')}
              </span>
            )}
          </div>

          <!-- Service Title -->
          <h3 class="text-xl font-bold text-neutral-900 group-hover:text-primary-600 transition-colors duration-200 leading-tight">
            {service.data.title}
          </h3>

          <!-- Service Description -->
          <p class="text-neutral-600 text-sm leading-relaxed line-clamp-3">
            {service.data.description}
          </p>

          <!-- Service Tags -->
          {service.data.tags && service.data.tags.length > 0 && (
            <div class="flex flex-wrap gap-1.5">
              {service.data.tags.slice(0, 3).map((tag: string) => (
                <span class="inline-flex items-center rounded-md bg-primary-50 px-2 py-1 text-xs font-medium text-primary-700 border border-primary-200">
                  {tag}
                </span>
              ))}
              {service.data.tags.length > 3 && (
                <span class="text-xs text-neutral-400 self-center">
                  +{service.data.tags.length - 3} more
                </span>
              )}
            </div>
          )}

          <!-- Price and CTA -->
          <div class="flex items-end justify-between pt-2 border-t border-neutral-100">
            <div>
              <p class="text-sm text-neutral-500 font-medium">Starting from</p>
              <p class="text-2xl font-bold text-primary-600">
                {service.data.price === 0 ? "Free Quote" : `£${service.data.price}`}
              </p>
            </div>

            <div class="inline-flex items-center text-primary-600 hover:text-primary-700 font-semibold text-sm group-hover:translate-x-1 transition-transform duration-200">
              Learn More
              <svg class="ml-1 h-4 w-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"/>
              </svg>
            </div>
          </div>
        </div>

        <!-- Hover Overlay Effect -->
        <div class="absolute inset-0 bg-gradient-to-t from-primary-600/5 to-transparent opacity-0 group-hover:opacity-100 transition-opacity duration-300 pointer-events-none"></div>
      </a>
    </div>
  ))}
</div>

<style>
  .line-clamp-3 {
    display: -webkit-box;
    -webkit-line-clamp: 3;
    -webkit-box-orient: vertical;
    overflow: hidden;
  }
</style>