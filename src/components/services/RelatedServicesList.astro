---
type Props = {
  services: Array<{
    data: {
      title: string;
      description: string;
      price?: number;
      image?: string;
      category?: string;
      tags?: string[];
      featured?: boolean;
      slug?: string;
      alt?: string;
    };
    slug: string;
  }>;
};

const { services } = Astro.props;
import Text from '../fundations/elements/Text.astro';
import { Image } from 'astro:assets';
---

{
  services.length > 0 && (
    <section id='related-services' class='py-16 sm:py-24'>
      <div class='mx-auto max-w-7xl px-4 sm:px-6 lg:px-8'>
        <div class='mx-auto max-w-2xl lg:text-center'>
          <Text
            tag='span'
            variant='textBASE'
            class='font-semibold tracking-wide text-primary-600 uppercase'>
            Explore More
          </Text>
          <Text
            tag='h2'
            variant='displayLG'
            class='mt-2 font-bold tracking-tight text-neutral-900'>
            Related Services
          </Text>
        </div>

        <div class='mx-auto mt-12 grid max-w-2xl grid-cols-1 gap-x-8 gap-y-16 sm:mt-16 sm:grid-cols-2 lg:mx-0 lg:max-w-none lg:grid-cols-3'>
          {services.map(service => (
            <a
              href={`/services/${service.slug}`}
              class='group flex flex-col overflow-hidden rounded-lg border border-neutral-200 shadow-sm transition-shadow hover:shadow-md'>
              <div class='aspect-h-9 aspect-w-16 bg-neutral-200'>
                <img
                  src={service.data.image}
                  alt={service.data.title}
                  class='h-full w-full object-cover object-center'
                />
              </div>
              <div class='flex flex-1 flex-col justify-between bg-white p-6'>
                <div>
                  <Text
                    tag='h3'
                    variant='textLG'
                    class='font-semibold text-neutral-900'>
                    {service.data.title}
                  </Text>
                  <Text
                    tag='p'
                    variant='textBASE'
                    class='mt-3 line-clamp-3 text-neutral-600'>
                    {service.data.description}
                  </Text>
                </div>
                <Text
                  tag='p'
                  variant='textSM'
                  class='mt-4 font-medium text-primary-600'>
                  Learn more â†’
                </Text>
              </div>
            </a>
          ))}
        </div>
      </div>
    </section>
  )
}
