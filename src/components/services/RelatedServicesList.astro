---
type Props = {
  services: Array<{
    data: {
      title: string;
      description: string;
      price?: number;
      image?: string;
      category?: string;
      tags?: string[];
      featured?: boolean;
      slug?: string;
      alt?: string;
    };
    slug: string;
  }>;
};

const { services } = Astro.props;
---

{
  services.length > 0 && (
    <section id="related-services" class="py-16 sm:py-24">
      <div class="mx-auto max-w-7xl px-4 sm:px-6 lg:px-8">
        <div class="mx-auto max-w-2xl lg:text-center">
          <h2 class="text-base font-semibold tracking-wide text-primary-600 uppercase">
            Explore More
          </h2>
          <p class="mt-2 text-3xl font-bold tracking-tight text-neutral-900 sm:text-4xl">
            Related Services
          </p>
        </div>

        <div class="mx-auto mt-12 grid max-w-2xl grid-cols-1 gap-x-8 gap-y-16 sm:mt-16 sm:grid-cols-2 lg:mx-0 lg:max-w-none lg:grid-cols-3">
          {services.map((service) => (
            <a
              href={`/services/${service.slug}`}
              class="group flex flex-col overflow-hidden rounded-lg border border-neutral-200 shadow-sm transition-shadow hover:shadow-md"
            >
              <div class="aspect-h-9 aspect-w-16 bg-neutral-200">
                <img
                  src={service.data.image}
                  alt={service.data.title}
                  class="h-full w-full object-cover object-center"
                />
              </div>
              <div class="flex flex-1 flex-col justify-between bg-white p-6">
                <div>
                  <h3 class="text-xl font-semibold text-neutral-900">
                    {service.data.title}
                  </h3>
                  <p class="mt-3 line-clamp-3 text-sm text-neutral-600">
                    {service.data.description}
                  </p>
                </div>
                <p class="mt-4 text-sm text-primary-600">Learn more â†’</p>
              </div>
            </a>
          ))}
        </div>
      </div>
    </section>
  )
}
