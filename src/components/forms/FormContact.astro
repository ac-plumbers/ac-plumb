---
import Button from '../fundations/elements/Button.astro';
---

<form
  name='AC Plumbers Contact'
  class='mt-8 space-y-6'
  action='/success'
  netlify-honeypot='bot-field'
  data-netlify='true'
  method='POST'>
  <div class='grid grid-cols-1 gap-6 sm:grid-cols-2'>
    <div>
      <label for='first-name' class='block text-sm font-medium text-text-00'>
        First name <span class='text-red-600' aria-label='required'>*</span>
      </label>
      <input
        type='text'
        name='first-name'
        id='first-name'
        autocomplete='given-name'
        required
        aria-required='true'
        class='mt-2 block w-full rounded-lg border border-neutral-300 px-3 py-2 text-text-00 placeholder:text-neutral-500 focus:border-primary-600 focus:ring-1 focus:ring-primary-600 focus:outline-none'
      />
    </div>
    <div>
      <label for='last-name' class='block text-sm font-medium text-text-00'>
        Last name <span class='text-red-600' aria-label='required'>*</span>
      </label>
      <input
        type='text'
        name='last-name'
        id='last-name'
        autocomplete='family-name'
        required
        aria-required='true'
        class='mt-2 block w-full rounded-lg border border-neutral-300 px-3 py-2 text-text-00 placeholder:text-neutral-500 focus:border-primary-600 focus:ring-1 focus:ring-primary-600 focus:outline-none'
      />
    </div>
  </div>

  <div>
    <label for='email' class='block text-sm font-medium text-text-00'>
      Email address <span class='text-red-600' aria-label='required'>*</span>
    </label>
    <input
      type='email'
      name='email'
      id='email'
      autocomplete='email'
      required
      aria-required='true'
      class='mt-2 block w-full rounded-lg border border-neutral-300 px-3 py-2 text-text-00 placeholder:text-neutral-500 focus:border-primary-600 focus:ring-1 focus:ring-primary-600 focus:outline-none'
    />
  </div>

  <div>
    <label for='phone' class='block text-sm font-medium text-text-00'>
      Phone number
    </label>
    <input
      type='tel'
      name='phone'
      id='phone'
      autocomplete='tel'
      class='mt-2 block w-full rounded-lg border border-neutral-300 px-3 py-2 text-text-00 placeholder:text-neutral-500 focus:border-primary-600 focus:ring-1 focus:ring-primary-600 focus:outline-none'
    />
  </div>

  <div>
    <label for='service-type' class='block text-sm font-medium text-text-00'>
      Service needed
    </label>
    <select
      name='service-type'
      id='service-type'
      class='mt-2 block w-full rounded-lg border border-neutral-300 px-3 py-2 text-text-00 focus:border-primary-600 focus:ring-1 focus:ring-primary-600 focus:outline-none'>
      <option value=''>Select a service</option>
      <option value='emergency'>Emergency Plumbing</option>
      <option value='boiler'>Boiler Installation/Repair</option>
      <option value='heating'>Heating System</option>
      <option value='plumbing'>General Plumbing</option>
      <option value='gas'>Gas Safety Check</option>
      <option value='landlord'>Landlord Services</option>
      <option value='other'>Other</option>
    </select>
  </div>

  <div>
    <label for='message' class='block text-sm font-medium text-text-00'>
      Message <span class='text-red-600' aria-label='required'>*</span>
    </label>
    <textarea
      name='message'
      id='message'
      rows='4'
      required
      aria-required='true'
      placeholder="Tell us about your plumbing needs... Don't worry about technical details - we'll help you figure it out!"
      class='mt-2 block w-full rounded-lg border border-neutral-300 px-3 py-2 text-text-00 placeholder:text-neutral-500 focus:border-primary-600 focus:ring-1 focus:ring-primary-600 focus:outline-none'
    ></textarea>
  </div>

  <div>
    <Button type='submit' variant='primary' size='lg' class='w-full'>
      Get Your Free Quote
    </Button>
  </div>
</form>
