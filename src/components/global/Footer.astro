---
import { Image } from "astro:assets";

// Services Links
const servicesLinks = [
  { href: "/services/gas-boiler-installation", label: "Gas Boilers" },
  { href: "/services/gas-safety-checks-cp12", label: "Gas Safety (CP12)" },
  { href: "/services/central-heating-installation", label: "Heating" },
  {
    href: "/services/all-aspects-of-plumbing-heating-and-gas",
    label: "General Plumbing",
  },
  {
    href: "/services/renewable-air-source-heat-pump",
    label: "Heat Pumps & Electric Boilers",
  },
  { href: "/services/smart-thermostats", label: "Smart Thermostats" },
  { href: "/landlords", label: "Landlord Services" },
];

const areasLinks = [
  { href: "/areas-we-serve/brighton", label: "Brighton" },
  { href: "/areas-we-serve/hove", label: "Hove" },
  { href: "/areas-we-serve/lewes", label: "Lewes" },
  { href: "/areas-we-serve/portslade", label: "Portslade" },
  { href: "/areas-we-serve", label: "See All Areas" },
];

const companyLinks = [
  { href: "/about-us", label: "About Us" },
  { href: "/gallery", label: "Our Work" },
  { href: "/certifications", label: "Certifications" },
  { href: "/blog", label: "Blog" },
  { href: "/contact-us", label: "Contact Us" },
  { href: "/testimonials", label: "Customer Reviews" },
  { href: "/faq", label: "FAQs" },
];

const legalLinks = [
  { href: "/terms-and-conditions", label: "Terms and Conditions" },
  { href: "/privacy-policy", label: "Privacy Policy" },
  { href: "/cookie-policy", label: "Cookie Policy" },
  { href: "/ai-policy", label: "AI Policy" },
];
// Images
import logo from "@/images/logo/ac-plumbers-logo-brighton.png";
import bpec from "@/images/brands/bpec-certification-logo-gas-plumbing.png";
import checktrade from "@/images/brands/checkatrade-logo-ac-plumbers-brighton.png";
import oftec from "@/images/brands/oftec-registered-logo-heating-certification.png";
import gasSafe from "@/images/brands/gas-safe-register-logo-certified-brighton.png";
---

<footer class="bg-neutral-200">
  <div class="mx-auto max-w-7xl px-6 pt-8 pb-4 sm:pt-12 lg:px-8 lg:pt-16">
    <div class="xl:grid xl:grid-cols-5 xl:gap-8">
      <!-- Company Info Column -->
      <div class="space-y-8">
        <Image
          src={logo}
          width={48}
          height={48}
          alt="AC Plumbers Ltd logo with water and flame icons"
          title="AC Plumbers Ltd – Plumbing, Heating & Gas Services in Brighton"
          class="h-auto w-auto lg:scale-115"
        />
        <p class="text-sm/6 text-balance text-black">
          Expert Plumbing, Heating & Renewable Energy Services in Brighton &
          Hove and surrounding areas. Trusted. Certified. Local.
        </p>
        <div class="flex gap-x-6">
          <!-- social links remain unchanged -->
        </div>
      </div>

      <!-- Main Links Section - Now spans 4 columns -->
      <div
        class="mt-16 grid grid-cols-2 gap-8 sm:grid-cols-4 xl:col-span-4 xl:mt-0"
      >
        <!-- Services Column -->
        <div>
          <h3 class="text-sm/6 font-semibold text-black">Services</h3>
          <ul role="list" class="mt-6 space-y-4">
            {
              servicesLinks.map((link) => (
                <li>
                  <a
                    href={link.href}
                    class="text-sm/6 text-neutral-700 hover:text-primary-600 focus-visible:text-primary-600"
                  >
                    {link.label}
                  </a>
                </li>
              ))
            }
          </ul>
        </div>

        <!-- NEW: Areas We Serve Column -->
        <div>
          <h3 class="text-sm/6 font-semibold text-neutral-900">
            Areas We Serve
          </h3>
          <ul role="list" class="mt-6 space-y-4">
            {
              areasLinks.map((link) => (
                <li>
                  <a
                    href={link.href}
                    class="text-sm/6 text-neutral-700 hover:text-primary-600 focus-visible:text-primary-600"
                  >
                    {link.label}
                  </a>
                </li>
              ))
            }
          </ul>
        </div>

        <!-- Company Column -->
        <div>
          <h3 class="text-sm/6 font-semibold text-neutral-900">Company</h3>
          <ul role="list" class="mt-6 space-y-4">
            {
              companyLinks.map((link) => (
                <li>
                  <a
                    href={link.href}
                    class="text-sm/6 text-neutral-700 hover:text-primary-600 focus-visible:text-primary-600"
                  >
                    {link.label}
                  </a>
                </li>
              ))
            }
          </ul>
        </div>

        <!-- Legal Column -->
        <div>
          <h3 class="text-sm/6 font-semibold text-neutral-900">Legal</h3>
          <ul role="list" class="mt-6 space-y-4">
            {
              legalLinks.map((link) => (
                <li>
                  <a
                    href={link.href}
                    class="text-sm/6 text-neutral-700 hover:text-primary-600 focus-visible:text-primary-600"
                  >
                    {link.label}
                  </a>
                </li>
              ))
            }
          </ul>
        </div>
      </div>
    </div>

    <!-- Certifications Section -->
    <div class="mt-8 border-t border-white/10 pt-0 sm:mt-12 lg:mt-16">
      <h3
        class="mb-1 text-center text-sm font-semibold tracking-wide uppercase"
      >
        Certified & Trusted
      </h3>
      <div
        class="mx-auto grid max-w-lg grid-cols-2 gap-8 sm:max-w-xl sm:grid-cols-4 sm:gap-12"
      >
        <!-- Gas Safe -->
        <div
          class="flex items-center justify-center rounded-lg bg-white/5 p-4 transition-colors hover:bg-white/10"
        >
          <Image
            src={gasSafe}
            alt="Gas Safe Register logo – official gas safety certification"
            title="Gas Safe Registered – Certified Gas Engineers in Brighton | AC Plumbers Ltd."
            width={120}
            height={60}
            class="h-12 w-auto object-contain opacity-90 transition-opacity hover:opacity-100"
            format="webp"
            quality={90}
          />
        </div>

        <!-- BPEC -->
        <div
          class="flex items-center justify-center rounded-lg bg-white/5 p-4 transition-colors hover:bg-white/10"
        >
          <Image
            src={bpec}
            alt="BPEC Certification Ltd logo – plumbing and gas accreditation"
            title="BPEC Certification – Recognised Plumbing and Gas Training Body in the UK"
            width={120}
            height={60}
            class="h-12 w-auto object-contain opacity-90 transition-opacity hover:opacity-100"
            format="webp"
            quality={90}
          />
        </div>

        <!-- Checkatrade -->
        <div
          class="flex items-center justify-center rounded-lg bg-white/5 p-4 transition-colors hover:bg-white/10"
        >
          <Image
            src={checktrade}
            alt="Checkatrade logo with tagline 'Where reputation matters’"
            title="AC Plumbers Ltd. on Checkatrade – Trusted Plumbers in Brighton with Verified Reviews"
            width={120}
            height={60}
            class="h-12 w-auto object-contain opacity-90 transition-opacity hover:opacity-100"
            format="webp"
            quality={90}
          />
        </div>

        <!-- OFTEC -->
        <div
          class="flex items-center justify-center rounded-lg bg-white/5 p-4 transition-colors hover:bg-white/10"
        >
          <Image
            src={oftec}
            alt="OFTEC Registered Business logo for oil and heating certification"
            title="OFTEC Registered – Certified Oil Heating and Boiler Engineers | AC Plumbers Ltd. Brighton"
            width={120}
            height={60}
            class="h-12 w-auto object-contain opacity-90 transition-opacity hover:opacity-100"
            format="webp"
            quality={90}
          />
        </div>
      </div>
    </div>

    <!-- Copyright section - Updated with color palette -->
    <div class="mt-8 border-t border-white/10 pt-4 sm:mt-12 lg:mt-16">
      <p class="text-sm/6">
        &copy; 2025 AC Plumbers Ltd. Serving Brighton, Hove, Lewes, and
        surrounding areas. All rights reserved.
      </p>
    </div>
  </div>
</footer>
