---

<footer class="relative bg-neutral-900" data-bg="dark">
  <div
    class="bg-center-60 absolute inset-0 h-full w-full bg-[url('/images/services/freestanding-bathtub-installation-brighton.jpeg')] bg-cover"
  >
  </div>
  <div class="absolute inset-0 h-full w-full bg-black/20"></div>
  <div
    class="relative mx-auto max-w-7xl px-6 pt-8 pb-4 sm:pt-12 lg:px-8 lg:pt-16"
  >
    <div class="xl:grid xl:grid-cols-5 xl:gap-8">
      <!-- Company Info Column -->
      <div class="space-y-8">
        <Image
          src={logo}
          width={68}
          height={68}
          alt="AC Plumbers Ltd logo with water and flame icons"
          title="AC Plumbers Ltd â€“ Plumbing, Heating & Gas Services in Brighton"
          class="h-auto w-auto lg:scale-115"
        />
        <h3 class="font-lato text-lg text-balance text-white">
          AC Plumbers Ltd.
        </h3>
        <p class="font-lato text-neutral-100">
          Brighton & Hove, East Sussex <br />
          Gas Safe and Oftec Registered Engineers
        </p>

        <div class="flex gap-x-6">
          <!-- social links remain unchanged -->
        </div>
      </div>

      <!-- Main Links Section - Now spans 4 columns -->
      <div
        class="mt-16 grid grid-cols-2 gap-8 sm:grid-cols-4 xl:col-span-4 xl:mt-0"
      >
        <!-- Services Column -->
        <div>
          <h3 class="font-lato text-lg font-semibold text-white">Services</h3>
          <ul role="list" class="mt-6 space-y-4 font-lato">
            {
              servicesLinks.map((link) => (
                <li>
                  <a
                    href={link.href}
                    class="font-lato text-base text-white transition hover:text-accent-400 focus-visible:text-primary-600"
                  >
                    {link.label}
                  </a>
                </li>
              ))
            }
          </ul>
        </div>

        <!-- NEW: Areas We Serve Column -->
        <div>
          <h3 class="font-lato text-lg font-semibold text-white">
            Areas We Serve
          </h3>
          <ul role="list" class="mt-6 space-y-4 font-lato">
            {
              areasLinks.map((link) => (
                <li>
                  <a
                    href={link.href}
                    class="font-lato text-base text-white transition hover:text-accent-400 focus-visible:text-primary-600"
                  >
                    {link.label}
                  </a>
                </li>
              ))
            }
          </ul>
        </div>

        <!-- Company Column -->
        <div>
          <h3 class="font-lato text-lg font-semibold text-white">Company</h3>
          <ul role="list" class="mt-6 space-y-4 font-lato">
            {
              companyLinks.map((link) => (
                <li>
                  <a
                    href={link.href}
                    class="font-lato text-base text-white transition hover:text-accent-400 focus-visible:text-primary-600"
                  >
                    {link.label}
                  </a>
                </li>
              ))
            }
          </ul>
        </div>

        <!-- Legal Column -->
        <div>
          <h3 class="font-lato text-lg font-semibold text-white">Legal</h3>
          <ul role="list" class="mt-6 space-y-4 font-lato">
            {
              legalLinks.map((link) => (
                <li>
                  <a
                    href={link.href}
                    class="font-lato text-base text-white transition hover:text-accent-400 focus-visible:text-primary-600"
                  >
                    {link.label}
                  </a>
                </li>
              ))
            }
          </ul>
        </div>
      </div>
    </div>

    <!-- Certifications Section -->

    <!-- Copyright section - Updated with color palette -->
    <div class="mt-8 border-t border-white/10 pt-4 sm:mt-12 lg:mt-16">
      <div
        class="flex flex-wrap items-center justify-center gap-2 text-center font-inconsolata text-sm/6 text-white sm:flex-nowrap"
      >
        <span>&copy; 2025 AC Plumbers Ltd. All rights reserved.</span>
        <span class="hidden sm:inline">|</span>
        <a
          href="https://agencyga.es"
          target="_blank"
          rel="noopener"
          class="flex items-center justify-center gap-1 text-xs text-accent-300 transition hover:text-primary-400"
          title="Website by agencyGA"
        >
          <svg
            xmlns="http://www.w3.org/2000/svg"
            class="inline h-4 w-4"
            fill="none"
            viewBox="0 0 24 24"
            stroke="currentColor"
          >
            <ellipse cx="12" cy="12" rx="8" ry="10" stroke-width="2"></ellipse>
            <ellipse cx="9" cy="13" rx="1.5" ry="2.5" fill="#fff"></ellipse>
            <ellipse cx="15" cy="13" rx="1.5" ry="2.5" fill="#fff"></ellipse>
