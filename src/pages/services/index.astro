---
// src/pages/services/index.astro
import ServicesLayout from "@/layouts/ServicesLayout.astro";
import { getCollection } from "astro:content";
import { Image } from "astro:assets";

// Get all services and organize them
const allServices = await getCollection("services");

// Featured services for special display
const featuredServices = allServices
  .filter((service) => service.data.featured)
  .slice(0, 3);

// All services sorted (featured first, then alphabetically)
const services = allServices.sort((a, b) => {
  if (a.data.featured && !b.data.featured) return -1;
  if (!a.data.featured && b.data.featured) return 1;
  return a.data.title.localeCompare(b.data.title);
});

// Group services by category for better organization
const servicesByCategory = services.reduce(
  (acc, service) => {
    const category = service.data.category || "general";
    if (!acc[category]) acc[category] = [];
    acc[category].push(service);
    return acc;
  },
  {} as Record<string, typeof services>,
);

const title = "Professional Plumbing Services in Brighton - AC Plumbers Ltd";
const description =
  "Comprehensive plumbing, heating and gas services in Brighton. From emergency repairs to new installations. Fully qualified Gas Safe engineers.";
const canonical = "https://acplumb.co.uk/services";
---

<ServicesLayout title={title} description={description} canonical={canonical}>
  <!-- Hero Section with Gradient Background -->
  <div
    class="relative overflow-hidden rounded-3xl bg-gradient-to-br from-primary-600 via-primary-700 to-primary-800 px-8 py-16 text-center"
  >
    <div
      class="absolute inset-0 bg-gradient-to-r from-blue-600/20 to-transparent"
    >
    </div>
    <div class="relative z-10 mx-auto max-w-4xl">
      <div
        class="mb-6 inline-flex items-center rounded-full bg-white/10 px-4 py-2 text-sm font-medium text-white backdrop-blur-sm"
      >
        <svg
          class="mr-2 h-4 w-4"
          fill="none"
          viewBox="0 0 24 24"
          stroke-width="1.5"
          stroke="currentColor"
        >
          <path
            stroke-linecap="round"
            stroke-linejoin="round"
            d="M9 12.75L11.25 15 15 9.75M21 12c0 1.268-.63 2.39-1.593 3.068a3.745 3.745 0 01-1.043 3.296 3.745 3.745 0 01-3.296 1.043A3.745 3.745 0 0112 21c-1.268 0-2.39-.63-3.068-1.593a3.746 3.746 0 01-3.296-1.043 3.745 3.745 0 01-1.043-3.296A3.745 3.745 0 013 12c0-1.268.63-2.39 1.593-3.068a3.745 3.745 0 011.043-3.296 3.746 3.746 0 013.296-1.043A3.746 3.746 0 0112 3c1.268 0 2.39.63 3.068 1.593a3.746 3.746 0 013.296 1.043 3.746 3.746 0 011.043 3.296A3.745 3.745 0 0121 12z"
          ></path>
        </svg>
        Gas Safe Certified Engineers
      </div>
      <h1
        class="font-poppins text-4xl font-bold tracking-tight text-white sm:text-5xl lg:text-6xl"
      >
        Professional Plumbing Services
      </h1>
      <p class="mx-auto mt-6 max-w-2xl text-xl leading-8 text-primary-100">
        From emergency repairs to complete installations, our Gas Safe certified
        engineers deliver professional plumbing, heating, and gas services
        across Brighton & Hove.
      </p>
      <div
        class="mt-10 flex flex-col items-center justify-center gap-4 sm:flex-row"
      >
        <a
          href="#featured-services"
          class="rounded-lg bg-white px-8 py-3 text-sm font-semibold text-primary-600 shadow-lg transition-all duration-200 hover:bg-primary-50 hover:shadow-xl focus:ring-2 focus:ring-white focus:ring-offset-2 focus:ring-offset-primary-600 focus:outline-none"
        >
          Browse Our Services
        </a>
        <a
          href="/contact-us"
          class="rounded-lg border-2 border-white px-8 py-3 text-sm font-semibold text-white transition-all duration-200 hover:bg-white hover:text-primary-600 focus:ring-2 focus:ring-white focus:ring-offset-2 focus:ring-offset-primary-600 focus:outline-none"
        >
          Get Free Quote
        </a>
      </div>
    </div>
    <!-- Decorative elements -->
    <div class="absolute -top-24 -right-24 h-48 w-48 rounded-full bg-white/5">
    </div>
    <div class="absolute -bottom-32 -left-32 h-64 w-64 rounded-full bg-white/5">
    </div>
  </div>

  <!-- Featured Services Section -->
  {
    featuredServices.length > 0 && (
      <section id="featured-services" class="py-20">
        <div class="mx-auto mb-16 max-w-3xl text-center">
          <div class="mb-4 inline-flex items-center rounded-full bg-accent-100 px-4 py-2 text-sm font-medium text-accent-700">
            <svg class="mr-2 h-4 w-4" fill="currentColor" viewBox="0 0 20 20">
              <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z" />
            </svg>
            Most Popular Services
          </div>
          <h2 class="font-poppins text-4xl font-bold tracking-tight text-primary-600 sm:text-5xl">
            Trusted by Brighton Residents
          </h2>
          <p class="mt-6 text-xl leading-8 text-text-00">
            The services our customers rely on most for their homes and
            businesses
          </p>
        </div>
        <div class="grid grid-cols-1 gap-8 lg:grid-cols-3">
          {featuredServices.map((service, index) => (
            <div
              class={`group relative overflow-hidden rounded-2xl bg-gradient-to-br ${
                index === 0
                  ? "from-primary-50 to-primary-100"
                  : index === 1
                    ? "from-accent-50 to-accent-100"
                    : "from-primary-50 to-blue-100"
              } p-8 shadow-lg transition-all duration-500 hover:-translate-y-2 hover:shadow-2xl`}
            >
              <div class="absolute -top-4 -right-4 h-20 w-20 rounded-full bg-white/20" />
              <div class="absolute -bottom-8 -left-8 h-32 w-32 rounded-full bg-white/10" />
              <div class="relative z-10">
                {service.data.image && (
                  <div class="mb-6 overflow-hidden rounded-xl">
                    <Image
                      src={service.data.image}
                      alt={service.data.alt || service.data.title}
                      width={400}
                      height={240}
                      class="h-60 w-full object-cover transition-transform duration-500 group-hover:scale-110"
                    />
                  </div>
                )}
                <div class="mb-4 flex items-center justify-between">
                  <span class="inline-flex items-center rounded-full bg-white px-3 py-1 text-sm font-semibold text-primary-600 shadow-sm">
                    <svg
                      class="mr-1 h-3 w-3"
                      fill="currentColor"
                      viewBox="0 0 20 20"
                    >
                      <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z" />
                    </svg>
                    Featured
                  </span>
                  {service.data.price > 0 && (
                    <span class="text-2xl font-bold text-primary-600">
                      From £{service.data.price}
                    </span>
                  )}
                </div>
                <h3 class="mb-4 font-poppins text-2xl font-bold text-primary-600">
                  {service.data.title}
                </h3>
                <p class="mb-6 line-clamp-6 leading-relaxed text-text-00">
                  {service.data.description}
                </p>
                {service.data.tags && (
                  <div class="mb-6 flex flex-wrap gap-2">
                    {service.data.tags.slice(0, 3).map((tag) => (
                      <span class="inline-flex items-center rounded-lg bg-white/70 px-3 py-1 text-xs font-medium text-primary-700">
                        {tag}
                      </span>
                    ))}
                  </div>
                )}
                <a
                  href={`/services/${service.slug}`}
                  class="inline-flex items-center gap-2 rounded-lg bg-primary-600 px-6 py-3 font-semibold text-white shadow-lg transition-all duration-200 hover:bg-primary-700 hover:shadow-xl focus:ring-2 focus:ring-primary-600 focus:ring-offset-2 focus:outline-none"
                  aria-label={`Learn more about ${service.data.title}`}
                >
                  Learn More
