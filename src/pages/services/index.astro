---
// src/pages/services/index.astro
import ServicesLayout from "@/layouts/ServicesLayout.astro";
import { getCollection } from "astro:content";
import { Image } from "astro:assets";

// Get all services and organize them
const allServices = await getCollection("services");

// Featured services for special display
const featuredServices = allServices
  .filter((service) => service.data.featured)
  .slice(0, 3);

// All services sorted (featured first, then alphabetically)
const services = allServices.sort((a, b) => {
  if (a.data.featured && !b.data.featured) return -1;
  if (!a.data.featured && b.data.featured) return 1;
  return a.data.title.localeCompare(b.data.title);
});

// Group services by category for better organization
const servicesByCategory = services.reduce(
  (acc, service) => {
    const category = service.data.category || "general";
    if (!acc[category]) acc[category] = [];
    acc[category].push(service);
    return acc;
  },
  {} as Record<string, typeof services>,
);

const title = "Professional Plumbing Services in Brighton - AC Plumbers Ltd";
const description =
  "Comprehensive plumbing, heating and gas services in Brighton. From emergency repairs to new installations. Fully qualified Gas Safe engineers.";
const canonical = "https://acplumb.co.uk/services";
---

<ServicesLayout title={title} description={description} canonical={canonical}>
  <!-- Services Introduction -->
  <div class="mx-auto mb-12 max-w-3xl text-center">
    <p class="text-lg leading-8 text-text-00">
      From emergency repairs to complete installations, our Gas Safe certified
      engineers deliver professional plumbing, heating, and gas services across
      Brighton & Hove. Browse our complete range of services below.
    </p>
  </div>

  <!-- Featured Services Section -->
  {
    featuredServices.length > 0 && (
      <section class="mb-16">
        <div class="mx-auto mb-12 max-w-2xl text-center">
          <h2 class="font-poppins text-3xl font-bold tracking-tight text-primary-600 sm:text-4xl">
            Our Most Popular Services
          </h2>
          <p class="mt-4 text-lg text-text-00">
            The services our Brighton customers rely on most
          </p>
        </div>
        <div class="mb-16 grid grid-cols-1 gap-8 sm:grid-cols-2 lg:grid-cols-3">
          {featuredServices.map((service) => (
            <div class="group relative rounded-lg border border-primary-200 bg-background-00 shadow-sm transition-all duration-300 hover:shadow-lg">
              {service.data.image && (
                <div class="aspect-h-48 aspect-w-64 overflow-hidden rounded-t-lg">
                  <Image
                    src={service.data.image}
                    alt={service.data.title}
                    width={400}
                    height={300}
                    class="h-48 w-full object-cover transition-transform duration-300 group-hover:scale-105"
                  />
                </div>
              )}
              <div class="p-6">
                <div class="mb-3 flex items-center justify-between">
                  <span class="inline-flex items-center rounded-full bg-accent-100 px-2.5 py-0.5 text-xs font-medium text-accent-700">
                    Featured
                  </span>
                  {service.data.price > 0 && (
                    <span class="text-lg font-semibold text-primary-600">
                      From £{service.data.price}
                    </span>
                  )}
                </div>
                <h3 class="mb-2 font-poppins text-xl font-semibold text-primary-600">
                  {service.data.title}
                </h3>
                <p class="mb-4 line-clamp-3 text-text-00">
                  {service.data.description}
                </p>
                {service.data.tags && (
                  <div class="mb-4 flex flex-wrap gap-2">
                    {service.data.tags.slice(0, 3).map((tag) => (
                      <span class="inline-flex items-center rounded-md bg-primary-100 px-2 py-1 text-xs font-medium text-primary-700">
                        {tag}
                      </span>
                    ))}
                  </div>
                )}
                <a
                  href={`/services/${service.slug}`}
                  class="inline-flex items-center gap-2 rounded-md px-1 font-semibold text-primary-600 transition-colors hover:text-primary-500 focus:ring-2 focus:ring-primary-600 focus:ring-offset-2 focus:outline-none"
                  aria-label={`Learn more about ${service.data.title}`}
                >
                  Learn More
                  <svg
                    class="h-4 w-4"
                    fill="none"
                    viewBox="0 0 24 24"
                    stroke-width="1.5"
                    stroke="currentColor"
                  >
                    <path
                      stroke-linecap="round"
                      stroke-linejoin="round"
                      d="M13.5 4.5 21 12m0 0-7.5 7.5M21 12H3"
                    />
                  </svg>
                </a>
              </div>
            </div>
          ))}
        </div>
      </section>
    )
  }

  <!-- All Services by Category -->
  <section>
    <div class="mx-auto mb-12 max-w-2xl text-center">
      <h2
        class="font-poppins text-3xl font-bold tracking-tight text-primary-600 sm:text-4xl"
      >
        Complete Range of Services
      </h2>
      <p class="mt-4 text-lg text-text-00">
        Professional solutions for all your plumbing, heating, and gas needs
      </p>
    </div>

    {
      Object.keys(servicesByCategory).map((category) => (
        <div class="mb-12">
          <h3 class="mb-6 font-poppins text-2xl font-semibold text-primary-600 capitalize">
            {category.replace("-", " ")} Services
          </h3>
          <div class="grid grid-cols-1 gap-x-6 gap-y-8 sm:grid-cols-2 lg:grid-cols-3">
            {servicesByCategory[category].map((service) => (
              <a
                href={`/services/${service.slug}`}
                class="group block"
                aria-label={`View details for ${service.data.title}`}
              >
                <div class="overflow-hidden rounded-lg border border-primary-200 bg-background-00 shadow-sm transition-all hover:border-primary-300 hover:shadow-md">
                  {service.data.image && (
                    <div class="aspect-h-48 aspect-w-64 overflow-hidden">
                      <Image
                        src={service.data.image}
                        alt={service.data.title}
                        width={400}
                        height={300}
                        class="h-48 w-full object-cover transition-transform duration-300 group-hover:scale-105"
                      />
                    </div>
                  )}
                  <div class="p-6">
                    <div class="mb-3 flex items-start justify-between">
                      <h4 class="font-poppins text-lg font-medium text-primary-600 group-hover:text-primary-700">
                        {service.data.title}
                      </h4>
                      {service.data.featured && (
                        <span class="inline-flex items-center rounded-full bg-accent-100 px-2 py-1 text-xs font-medium text-accent-700">
                          <svg
                            class="mr-1 h-3 w-3"
                            fill="currentColor"
                            viewBox="0 0 20 20"
                          >
                            <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z" />
                          </svg>
                          Popular
                        </span>
                      )}
                    </div>
                    <p class="mb-3 line-clamp-2 text-sm text-text-00">
                      {service.data.description}
                    </p>
                    {service.data.price > 0 && (
                      <p class="mb-2 font-semibold text-primary-600">
                        From £{service.data.price}
                      </p>
                    )}
                    {service.data.tags && (
                      <div class="mb-3 flex flex-wrap gap-1">
                        {service.data.tags.slice(0, 2).map((tag) => (
                          <span class="inline-flex items-center rounded-md bg-primary-100 px-2 py-1 text-xs font-medium text-primary-700">
                            {tag}
                          </span>
                        ))}
                      </div>
                    )}
                    <div class="flex items-center text-sm font-medium text-primary-600 group-hover:text-primary-500">
                      View Details
                      <svg
                        class="ml-1 h-4 w-4 transition-transform group-hover:translate-x-1"
                        fill="none"
                        viewBox="0 0 24 24"
                        stroke-width="1.5"
                        stroke="currentColor"
                      >
                        <path
                          stroke-linecap="round"
                          stroke-linejoin="round"
                          d="M13.5 4.5 21 12m0 0-7.5 7.5M21 12H3"
                        />
                      </svg>
                    </div>
                  </div>
                </div>
              </a>
            ))}
          </div>
        </div>
      ))
    }
  </section>

  <!-- Call to Action -->
  <section class="mt-16 rounded-2xl bg-primary-600 p-8 text-center">
    <h3 class="font-poppins text-2xl font-bold text-background-00">
      Need Help Choosing the Right Service?
    </h3>
    <p class="mt-4 text-primary-100">
      Our experienced team is here to help you find the perfect solution for
      your needs.
    </p>
    <div
      class="mt-6 flex flex-col items-center justify-center gap-4 sm:flex-row"
    >
      <a
        href="/contact-us"
        class="rounded-md bg-background-00 px-6 py-3 text-sm font-semibold text-primary-600 shadow-sm transition-colors duration-200 hover:bg-primary-50 focus:ring-2 focus:ring-background-00 focus:ring-offset-2 focus:ring-offset-primary-600 focus:outline-none"
      >
        Get Expert Advice
      </a>
      <a
        href="tel:01273123456"
        class="rounded-md border border-background-00 px-6 py-3 text-sm font-semibold text-background-00 transition-colors duration-200 hover:bg-background-00 hover:text-primary-600 focus:ring-2 focus:ring-background-00 focus:ring-offset-2 focus:ring-offset-primary-600 focus:outline-none"
      >
        Call 01273 123 456
      </a>
    </div>
  </section>
</ServicesLayout>
