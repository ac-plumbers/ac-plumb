---
import BaseLayout from "@/layouts/BaseLayout.astro";
import TestimonialsComponent from "@/components/home/Testimonials.astro";

// Page meta data
const title = "Customer Testimonials | AC Plumbers Ltd. Brighton";
const description =
  "Read genuine customer reviews and testimonials from our satisfied clients across Brighton & Hove. See why we're the trusted choice for plumbing, heating, and gas services.";
const keywords =
  "customer testimonials, reviews, AC Plumbers Ltd. Brighton, plumbing reviews, heating reviews, gas safe reviews, Brighton plumbers";
---

<BaseLayout title={title} description={description} keywords={keywords}>
  <!-- Hero Section -->
  <section class="relative pt-32 pb-16 sm:pt-40 sm:pb-24">
    <div class="mx-auto max-w-7xl px-4 sm:px-6 lg:px-8">
      <div
        class="relative overflow-hidden rounded-2xl bg-gradient-to-br from-primary-300 via-primary-700 to-primary-800 px-6 py-12 text-center sm:px-8 sm:py-16"
      >
        <div
          class="absolute inset-0 bg-gradient-to-r from-primary-900/80 to-primary-800/60"
        >
        </div>

        <!-- Decorative elements -->
        <div
          class="absolute -top-16 -right-16 h-32 w-32 rounded-full bg-white/5"
        >
        </div>
        <div
          class="absolute -bottom-20 -left-20 h-40 w-40 rounded-full bg-white/5"
        >
        </div>

        <div class="relative z-10">
          <div
            class="mb-4 inline-flex items-center rounded-full bg-white/10 px-3 py-1 text-sm font-medium text-white backdrop-blur-sm"
          >
            <svg class="mr-2 h-4 w-4" fill="currentColor" viewBox="0 0 20 20">
              <path
                d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z"
              ></path>
            </svg>
            Customer Reviews
          </div>

          <h1
            class="text-3xl font-bold tracking-tight text-white sm:text-4xl lg:text-5xl"
          >
            What Our Customers Say
          </h1>

          <p
            class="mx-auto mt-4 max-w-2xl text-lg leading-relaxed text-primary-100"
          >
            Real experiences from real customers across Brighton & Hove. See why
            families and businesses trust AC Plumbers for their plumbing,
            heating, and gas needs.
          </p>

          <!-- Trust indicators -->
          <div
            class="mt-8 flex flex-col items-center justify-center gap-6 text-white sm:flex-row"
          >
            <div class="flex items-center gap-2">
              <svg
                class="h-5 w-5 text-accent-400"
                fill="currentColor"
                viewBox="0 0 20 20"
              >
                <path
                  d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z"
                ></path>
              </svg>
              <span class="font-semibold">5-Star Service</span>
            </div>

            <div class="flex items-center gap-2">
              <svg
                class="h-5 w-5 text-accent-400"
                fill="none"
                viewBox="0 0 24 24"
                stroke="currentColor"
              >
                <path
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  stroke-width="2"
                  d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"></path>
              </svg>
              <span class="font-semibold">Gas Safe Registered</span>
            </div>

            <div class="flex items-center gap-2">
              <svg
                class="h-5 w-5 text-accent-400"
                fill="none"
                viewBox="0 0 24 24"
                stroke="currentColor"
              >
                <path
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  stroke-width="2"
                  d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"></path>
              </svg>
              <span class="font-semibold">24/7 Emergency</span>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Main Testimonials Component -->
  <TestimonialsComponent />

  <!-- Additional Trust Section -->
  <section class="bg-neutral-50 py-20">
    <div class="mx-auto max-w-7xl px-4 sm:px-6 lg:px-8">
      <div class="mb-16 text-center">
        <h2 class="text-3xl font-bold text-primary-900 sm:text-4xl">
          Why Customers Choose AC Plumbers
        </h2>
        <p class="mx-auto mt-6 max-w-3xl text-xl text-neutral-700">
          Over the years, we've built lasting relationships with customers
          across Brighton & Hove through our commitment to quality, reliability,
          and exceptional service.
        </p>
      </div>

      <div class="grid grid-cols-1 gap-8 md:grid-cols-2 lg:grid-cols-4">
        <div class="text-center">
          <div
            class="mx-auto mb-4 flex h-16 w-16 items-center justify-center rounded-full bg-primary-100"
          >
            <svg
              class="h-8 w-8 text-primary-600"
              fill="none"
              viewBox="0 0 24 24"
              stroke="currentColor"
            >
              <path
                stroke-linecap="round"
                stroke-linejoin="round"
                stroke-width="2"
                d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"></path>
            </svg>
          </div>
          <h3 class="mb-2 text-lg font-semibold text-primary-900">
            Fully Qualified
          </h3>
          <p class="text-neutral-600">
            Gas Safe registered engineers with extensive training and experience
          </p>
        </div>

        <div class="text-center">
          <div
            class="mx-auto mb-4 flex h-16 w-16 items-center justify-center rounded-full bg-accent-100"
          >
            <svg
              class="h-8 w-8 text-accent-600"
              fill="none"
              viewBox="0 0 24 24"
              stroke="currentColor"
            >
              <path
                stroke-linecap="round"
                stroke-linejoin="round"
                stroke-width="2"
                d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"></path>
            </svg>
          </div>
          <h3 class="mb-2 text-lg font-semibold text-primary-900">
            Fast Response
          </h3>
          <p class="text-neutral-600">
            Emergency callouts available 24/7 with typical response times of 1-2
            hours
          </p>
        </div>

        <div class="text-center">
          <div
            class="mx-auto mb-4 flex h-16 w-16 items-center justify-center rounded-full bg-primary-100"
          >
            <svg
              class="h-8 w-8 text-primary-600"
              fill="none"
              viewBox="0 0 24 24"
              stroke="currentColor"
            >
              <path
                stroke-linecap="round"
                stroke-linejoin="round"
                stroke-width="2"
                d="M9 5H7a2 2 0 00-2 2v6a2 2 0 002 2h2m5 0h2a2 2 0 002-2V7a2 2 0 00-2-2h-2m-5 4h4"
              ></path>
            </svg>
          </div>
          <h3 class="mb-2 text-lg font-semibold text-primary-900">
            Transparent Pricing
          </h3>
          <p class="text-neutral-600">
            Clear, upfront quotes with no hidden charges or surprise fees
          </p>
        </div>

        <div class="text-center">
          <div
            class="mx-auto mb-4 flex h-16 w-16 items-center justify-center rounded-full bg-accent-100"
          >
            <svg
              class="h-8 w-8 text-accent-600"
              fill="none"
              viewBox="0 0 24 24"
              stroke="currentColor"
            >
              <path
                stroke-linecap="round"
                stroke-linejoin="round"
                stroke-width="2"
                d="M9 12.75L11.25 15 15 9.75M21 12a9 9 0 11-18 0 9 9 0 0118 0z"
              ></path>
            </svg>
          </div>
          <h3 class="mb-2 text-lg font-semibold text-primary-900">
            Quality Guarantee
          </h3>
          <p class="text-neutral-600">
            All work backed by our comprehensive warranty and satisfaction
            guarantee
          </p>
        </div>
      </div>
    </div>
  </section>

  <!-- Call to Action -->
  <section class="py-20">
    <div class="mx-auto max-w-7xl px-4 sm:px-6 lg:px-8">
      <div
        class="relative overflow-hidden rounded-2xl bg-gradient-to-br from-primary-600 via-primary-700 to-primary-800 px-8 py-16 text-center"
      >
        <div
          class="absolute -top-16 -right-16 h-32 w-32 rounded-full bg-white/5"
        >
        </div>
        <div
          class="absolute -bottom-20 -left-20 h-40 w-40 rounded-full bg-white/5"
        >
        </div>

        <div class="relative z-10">
          <h2 class="text-3xl font-bold text-white sm:text-4xl">
            Ready to Join Our Happy Customers?
          </h2>
          <p class="mx-auto mt-6 max-w-2xl text-xl text-primary-100">
            Experience the same exceptional service that our customers rave
            about. Get your free quote today.
          </p>

          <div
            class="mt-8 flex flex-col items-center justify-center gap-4 sm:flex-row"
          >
            <a
              href="/contact-us"
              class="rounded-lg bg-white px-8 py-3 text-base font-semibold text-primary-600 shadow-lg transition-all duration-200 hover:bg-primary-50 hover:shadow-xl focus:ring-2 focus:ring-white focus:ring-offset-2 focus:ring-offset-primary-600 focus:outline-none"
            >
              Get Free Quote
            </a>
            <a
              href="tel:01273123456"
              class="rounded-lg border-2 border-white px-8 py-3 text-base font-semibold text-white transition-all duration-200 hover:bg-white hover:text-primary-600 focus:ring-2 focus:ring-white focus:ring-offset-2 focus:ring-offset-primary-600 focus:outline-none"
            >
              Call: 01273 123 456
            </a>
          </div>
        </div>
      </div>
    </div>
  </section>
</BaseLayout>
