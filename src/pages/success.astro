---
import Layout from "../layouts/Layout.astro";
---

<Layout>
  <main
    class="flex min-h-screen flex-col items-center justify-center bg-green-50 px-6 py-32 sm:py-40 lg:px-8"
  >
    <div class="text-center">
      <h1 class="text-4xl font-bold text-green-700 sm:text-5xl">Thank You!</h1>
      <p class="mt-4 text-lg text-green-600">
        Your message has been successfully sent. We will get back to you
        shortly.
      </p>
      <a
        href="/"
        class="mt-8 inline-block text-sm font-semibold text-green-700 hover:underline"
        ><span aria-hidden="true">&larr;</span> Back to home</a
      >
    </div>
  </main>
</Layout>
