---
import BaseLayout from "@/layouts/BaseLayout.astro";
import { Image } from "astro:assets";
import aboutUs from "@/images/lavori/gas-boiler-installation-brighton-ac-plumbers.jpg";

import AboutHero from "@/components/about/AboutHero.astro";
---

<BaseLayout>
  <!-- Skip to main content link for accessibility -->
  <a
    href="#main-content"
    class="sr-only z-50 rounded-md bg-primary-600 px-4 py-2 text-background-00 focus:not-sr-only focus:absolute focus:top-4 focus:left-4 focus:ring-2 focus:ring-primary-600 focus:ring-offset-2"
  >
    Skip to main content
  </a>

  <div class="bg-background-00">
    <main id="main-content" class="isolate">
      <!-- Hero section -->
      <AboutHero />
      <!-- Company Story Timeline -->
      <section
        class="mx-auto mt-16 max-w-7xl px-6 sm:mt-20 lg:px-8"
        aria-labelledby="timeline-title"
      >
        <div class="mx-auto mb-16 max-w-2xl lg:mx-0">
          <h2
            id="timeline-title"
            class="mt-4 text-3xl font-bold tracking-tight text-primary-600 sm:text-4xl"
          >
            Our Journey
          </h2>
          <p class="mt-6 text-lg leading-8 text-text-00">
            From humble beginnings to becoming Brighton's trusted plumbing
            experts
          </p>
        </div>

        <div
          class="mx-auto grid max-w-2xl grid-cols-1 gap-8 overflow-hidden lg:mx-0 lg:max-w-none lg:grid-cols-4"
        >
          <article class="relative">
            <time
              datetime="2010-01"
              class="flex items-center text-sm/6 font-semibold text-primary-600"
            >
              <svg
                viewBox="0 0 4 4"
                class="mr-4 size-1 flex-none"
                aria-hidden="true"
              >
                <circle cx="2" cy="2" r="2" fill="currentColor"></circle>
              </svg>
              January 2010
              <div
                class="absolute -ml-2 h-px w-screen -translate-x-full bg-text-00/10 sm:-ml-4 lg:static lg:-mr-6 lg:ml-8 lg:w-auto lg:flex-auto lg:translate-x-0"
                aria-hidden="true"
              >
              </div>
            </time>
            <h3
              class="mt-6 text-lg/8 font-semibold tracking-tight text-text-00"
            >
              Company Founded
            </h3>
            <p class="mt-1 text-base/7 text-text-00">
              AC Plumbers Ltd was established with a mission to provide
              reliable, professional plumbing services to Brighton residents and
              businesses.
            </p>
          </article>

          <article class="relative">
            <time
              datetime="2015-03"
              class="flex items-center text-sm/6 font-semibold text-primary-600"
            >
              <svg
                viewBox="0 0 4 4"
                class="mr-4 size-1 flex-none"
                aria-hidden="true"
              >
                <circle cx="2" cy="2" r="2" fill="currentColor"></circle>
              </svg>
              March 2015
              <div
                class="absolute -ml-2 h-px w-screen -translate-x-full bg-text-00/10 sm:-ml-4 lg:static lg:-mr-6 lg:ml-8 lg:w-auto lg:flex-auto lg:translate-x-0"
                aria-hidden="true"
              >
              </div>
            </time>
            <h3
              class="mt-6 text-lg/8 font-semibold tracking-tight text-text-00"
            >
              Gas Safe Certification
            </h3>
            <p class="mt-1 text-base/7 text-text-00">
              Achieved full Gas Safe registration, expanding our services to
              include boiler installations, repairs, and annual safety checks.
            </p>
          </article>

          <article class="relative">
            <time
              datetime="2018-06"
              class="flex items-center text-sm/6 font-semibold text-primary-600"
            >
              <svg
                viewBox="0 0 4 4"
                class="mr-4 size-1 flex-none"
                aria-hidden="true"
              >
                <circle cx="2" cy="2" r="2" fill="currentColor"></circle>
              </svg>
              June 2018
              <div
                class="absolute -ml-2 h-px w-screen -translate-x-full bg-text-00/10 sm:-ml-4 lg:static lg:-mr-6 lg:ml-8 lg:w-auto lg:flex-auto lg:translate-x-0"
                aria-hidden="true"
              >
              </div>
            </time>
            <h3
              class="mt-6 text-lg/8 font-semibold tracking-tight text-text-00"
            >
              Team Expansion
            </h3>
            <p class="mt-1 text-base/7 text-text-00">
              Grew to a team of 5 certified engineers, enabling us to take on
              larger projects and provide faster emergency response times.
            </p>
          </article>

          <article class="relative">
            <time
              datetime="2023-01"
              class="flex items-center text-sm/6 font-semibold text-primary-600"
            >
              <svg
                viewBox="0 0 4 4"
                class="mr-4 size-1 flex-none"
                aria-hidden="true"
              >
                <circle cx="2" cy="2" r="2" fill="currentColor"></circle>
              </svg>
              January 2023
              <div
                class="absolute -ml-2 h-px w-screen -translate-x-full bg-text-00/10 sm:-ml-4 lg:static lg:-mr-6 lg:ml-8 lg:w-auto lg:flex-auto lg:translate-x-0"
                aria-hidden="true"
              >
              </div>
            </time>
            <h3
              class="mt-6 text-lg/8 font-semibold tracking-tight text-text-00"
            >
              Green Technology Focus
            </h3>
            <p class="mt-1 text-base/7 text-text-00">
              Specialized in eco-friendly heating solutions including heat pumps
              and smart thermostats, helping customers reduce energy costs.
            </p>
          </article>
        </div>
      </section>

      <!-- Trust & Certifications -->
      <section
        class="mx-auto mt-32 max-w-7xl sm:mt-40 sm:px-6 lg:px-8"
        aria-labelledby="certifications-title"
      >
        <div
          class="relative isolate overflow-hidden bg-primary-600 px-6 py-24 text-center shadow-2xl sm:rounded-3xl sm:px-16"
        >
          <h2
            id="certifications-title"
            class="mx-auto max-w-2xl text-3xl font-bold tracking-tight text-background-00 sm:text-4xl"
          >
            Trusted & Certified
          </h2>
          <p class="mx-auto mt-6 max-w-xl text-lg/8 text-primary-100">
            We hold all necessary certifications and are fully insured, giving
            you complete peace of mind for every job we undertake.
          </p>

          <div
            class="mx-auto mt-20 grid max-w-lg grid-cols-2 items-center gap-x-8 gap-y-12 sm:max-w-xl sm:grid-cols-3 sm:gap-x-10 sm:gap-y-14 lg:max-w-4xl lg:grid-cols-5"
          >
            <div class="col-span-2 flex flex-col items-center lg:col-span-1">
              <img
                class="max-h-12 w-full object-contain brightness-0 invert filter"
                src="/images/logo/ac-plumbers-logo-brighton.png"
                alt="AC Plumbers Ltd - Certified Plumbing Services"
                width="158"
                height="48"
              />
              <span class="mt-2 text-xs text-primary-100"
                >Gas Safe Registered</span
              >
            </div>

            <div class="col-span-2 flex flex-col items-center lg:col-span-1">
              <div
                class="flex max-h-12 w-full items-center justify-center text-lg font-bold text-background-00"
              >
                CIPHE
              </div>
              <span class="mt-2 text-xs text-primary-100"
                >Chartered Institute</span
              >
            </div>

            <div class="col-span-2 flex flex-col items-center lg:col-span-1">
              <div
                class="flex max-h-12 w-full items-center justify-center text-lg font-bold text-background-00"
              >
                Worcester
              </div>
              <span class="mt-2 text-xs text-primary-100"
                >Accredited Installer</span
              >
            </div>

            <div
              class="col-span-2 flex flex-col items-center sm:col-start-2 lg:col-span-1"
            >
              <div
                class="flex max-h-12 w-full items-center justify-center text-lg font-bold text-background-00"
              >
                Vaillant
              </div>
              <span class="mt-2 text-xs text-primary-100"
                >Advance Installer</span
              >
            </div>

            <div
              class="col-span-2 col-start-2 flex flex-col items-center sm:col-start-auto lg:col-span-1"
            >
              <div
                class="flex max-h-12 w-full items-center justify-center text-lg font-bold text-background-00"
              >
                Insured
              </div>
              <span class="mt-2 text-xs text-primary-100"
                >Â£2M Public Liability</span
              >
            </div>
          </div>

          <div
            class="absolute -top-24 right-0 -z-10 transform-gpu blur-3xl"
            aria-hidden="true"
          >
            <div
              class="aspect-[1404/767] w-[87.75rem] bg-gradient-to-r from-primary-300 to-accent-500 opacity-25"
              style="clip-path: polygon(73.6% 51.7%, 91.7% 11.8%, 100% 46.4%, 97.4% 82.2%, 92.5% 84.9%, 75.7% 64%, 55.3% 47.5%, 46.5% 49.4%, 45% 62.9%, 50.3% 87.2%, 21.3% 64.1%, 0.1% 100%, 5.4% 51.1%, 21.4% 63.9%, 58.9% 0.2%, 73.6% 51.7%)"
            >
            </div>
          </div>
        </div>
      </section>

      <!-- Our Team & Values -->
      <section
        class="mt-32 overflow-hidden sm:mt-40"
        aria-labelledby="team-title"
      >
        <div class="mx-auto max-w-7xl px-6 lg:flex lg:px-8">
          <div
            class="mx-auto grid max-w-2xl grid-cols-1 gap-x-12 gap-y-16 lg:mx-0 lg:max-w-none lg:min-w-full lg:flex-none lg:gap-y-8"
          >
            <div class="lg:col-end-1 lg:w-full lg:max-w-lg lg:pb-8">
              <h2
                id="team-title"
                class="text-4xl font-bold tracking-tight text-primary-600 sm:text-5xl"
              >
                Our Expert Team
              </h2>
              <p class="mt-6 text-xl/8 text-text-00">
                Meet the skilled professionals who bring decades of combined
                experience to every project, ensuring quality workmanship and
                customer satisfaction.
              </p>
              <p class="mt-6 text-base/7 text-text-00">
                Our team consists of Gas Safe registered engineers, certified
                plumbers, and heating specialists who stay up-to-date with the
                latest industry standards and technologies.
              </p>

              <div class="mt-8 space-y-4">
                <div class="flex items-center gap-x-3">
                  <div class="flex-none rounded-full bg-accent-500/10 p-1">
                    <div class="h-2 w-2 rounded-full bg-accent-500"></div>
                  </div>
                  <p class="text-sm leading-6 text-text-00">
                    24/7 Emergency Response
                  </p>
                </div>
                <div class="flex items-center gap-x-3">
                  <div class="flex-none rounded-full bg-accent-500/10 p-1">
                    <div class="h-2 w-2 rounded-full bg-accent-500"></div>
                  </div>
                  <p class="text-sm leading-6 text-text-00">
                    All Work Guaranteed
                  </p>
                </div>
                <div class="flex items-center gap-x-3">
                  <div class="flex-none rounded-full bg-accent-500/10 p-1">
                    <div class="h-2 w-2 rounded-full bg-accent-500"></div>
                  </div>
                  <p class="text-sm leading-6 text-text-00">
                    Free Quotes & Estimates
                  </p>
                </div>
              </div>
            </div>

            <div
              class="flex flex-wrap items-start justify-end gap-6 sm:gap-8 lg:contents"
            >
              <div
                class="w-0 flex-auto lg:ml-auto lg:w-auto lg:flex-none lg:self-end"
              >
                <Image
                  src={aboutUs}
                  alt="Qualified AC Plumbers engineer installing a high-efficiency gas boiler in a Brighton home with sea view."
                  class="aspect-[7/5] w-[37rem] max-w-none rounded-2xl bg-gray-50 object-cover shadow-lg"
                  loading="lazy"
                  width="592"
                  height="422"
                />
              </div>

              <div
                class="contents lg:col-span-2 lg:col-end-2 lg:ml-auto lg:flex lg:w-[37rem] lg:items-start lg:justify-end lg:gap-x-8"
              >
                <div
                  class="order-first flex w-64 flex-none justify-end self-end lg:w-auto"
                >
                  <img
                    src="/images/services/gas-boiler-installation.jpeg"
                    alt="Professional gas boiler installation by AC Plumbers certified engineer"
                    class="aspect-[4/3] w-[24rem] max-w-none flex-none rounded-2xl bg-gray-50 object-cover shadow-lg"
                    loading="lazy"
                    width="384"
                    height="288"
                  />
                </div>

                <div
                  class="flex w-96 flex-auto justify-end lg:w-auto lg:flex-none"
                >
                  <img
                    src="/images/services/central-hesting-installation.jpeg"
                    alt="Central heating installation work being performed by AC Plumbers specialist"
                    class="aspect-[7/5] w-[37rem] max-w-none flex-none rounded-2xl bg-gray-50 object-cover shadow-lg"
                    loading="lazy"
                    width="592"
                    height="422"
                  />
                </div>

                <div
                  class="hidden sm:block sm:w-0 sm:flex-auto lg:w-auto lg:flex-none"
                >
                  <img
                    src="/images/services/smart-thermostats.jpeg"
                    alt="Smart thermostat installation showcasing modern heating technology"
                    class="aspect-[4/3] w-[24rem] max-w-none rounded-2xl bg-gray-50 object-cover shadow-lg"
                    loading="lazy"
                    width="384"
                    height="288"
                  />
                </div>
              </div>
            </div>
          </div>
        </div>
      </section>

      <!-- Statistics -->
      <section
        class="mx-auto mt-32 max-w-7xl px-6 sm:mt-40 lg:px-8"
        aria-labelledby="stats-title"
      >
        <div class="mx-auto max-w-2xl lg:mx-0">
          <h2
            id="stats-title"
            class="text-4xl font-bold tracking-tight text-primary-600 sm:text-5xl"
          >
            Trusted by Brighton Residents
          </h2>
          <p class="mt-6 text-base/7 text-text-00">
            Our commitment to excellence has earned us the trust of thousands of
            customers across Brighton and the surrounding areas.
          </p>
        </div>

        <div
          class="mx-auto mt-16 flex max-w-2xl flex-col gap-8 lg:mx-0 lg:mt-20 lg:max-w-none lg:flex-row lg:items-end"
        >
          <article
            class="flex flex-col-reverse justify-between gap-x-16 gap-y-8 rounded-2xl bg-accent-50 p-8 sm:w-3/4 sm:max-w-md sm:flex-row-reverse sm:items-end lg:w-72 lg:max-w-none lg:flex-none lg:flex-col lg:items-start"
          >
            <p
              class="flex-none text-3xl font-bold tracking-tight text-primary-600"
            >
              1,500+
            </p>
            <div class="sm:w-80 sm:shrink lg:w-auto lg:flex-none">
              <p class="text-lg font-semibold tracking-tight text-text-00">
                Happy Customers
              </p>
              <p class="mt-2 text-base/7 text-text-00">
                Satisfied homeowners and businesses across Brighton.
              </p>
            </div>
          </article>

          <article
            class="flex flex-col-reverse justify-between gap-x-16 gap-y-8 rounded-2xl bg-primary-600 p-8 sm:flex-row-reverse sm:items-end lg:w-full lg:max-w-sm lg:flex-auto lg:flex-col lg:items-start lg:gap-y-44"
          >
            <p
              class="flex-none text-3xl font-bold tracking-tight text-background-00"
            >
              24/7
            </p>
            <div class="sm:w-80 sm:shrink lg:w-auto lg:flex-none">
              <p
                class="text-lg font-semibold tracking-tight text-background-00"
              >
                Emergency Service Available
              </p>
              <p class="mt-2 text-base/7 text-primary-100">
                Round-the-clock emergency plumbing and heating support when you
                need it most.
              </p>
            </div>
          </article>

          <article
            class="flex flex-col-reverse justify-between gap-x-16 gap-y-8 rounded-2xl bg-accent-500 p-8 sm:w-11/12 sm:max-w-xl sm:flex-row-reverse sm:items-end lg:w-full lg:max-w-none lg:flex-auto lg:flex-col lg:items-start lg:gap-y-28"
          >
            <p
              class="flex-none text-3xl font-bold tracking-tight text-background-00"
            >
              15+ Years
            </p>
            <div class="sm:w-80 sm:shrink lg:w-auto lg:flex-none">
              <p
                class="text-lg font-semibold tracking-tight text-background-00"
              >
                Of Trusted Service
              </p>
              <p class="mt-2 text-base/7 text-accent-100">
                Over a decade of reliable plumbing and heating expertise in
                Brighton.
              </p>
            </div>
          </article>
        </div>
      </section>

      <!-- Contact CTA -->
      <section
        class="mx-auto mt-32 max-w-7xl px-6 sm:mt-40 lg:px-8"
        aria-labelledby="contact-cta-title"
      >
        <div
          class="mx-auto flex max-w-2xl flex-col items-end justify-between gap-16 lg:mx-0 lg:max-w-none lg:flex-row"
        >
          <div class="w-full lg:max-w-lg lg:flex-auto">
            <h2
              id="contact-cta-title"
              class="text-3xl font-bold tracking-tight text-primary-600 sm:text-4xl"
            >
              Ready to Get Started?
            </h2>
            <p class="mt-6 text-xl/8 text-text-00">
              Contact us today for a free quote or emergency service. Our
              friendly team is ready to help with all your plumbing and heating
              needs.
            </p>

            <img
              src="/images/services/gas-safety-checks.jpeg"
              alt="AC Plumbers engineer performing a comprehensive gas safety check"
              class="mt-16 aspect-[6/5] w-full rounded-2xl bg-gray-50 object-cover shadow-lg lg:aspect-auto lg:h-[34.5rem]"
              loading="lazy"
              width="672"
              height="552"
            />
          </div>

          <div class="w-full lg:max-w-xl lg:flex-auto">
            <div class="space-y-8">
              <div class="flex items-start gap-x-4">
                <div class="flex-none">
                  <div
                    class="flex h-10 w-10 items-center justify-center rounded-lg bg-primary-600"
                  >
                    <svg
                      class="h-6 w-6 text-background-00"
                      fill="none"
                      viewBox="0 0 24 24"
                      stroke-width="1.5"
                      stroke="currentColor"
                      aria-hidden="true"
                    >
                      <path
                        stroke-linecap="round"
