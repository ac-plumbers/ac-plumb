---
// Layout
import BaseLayout from "@/layouts/BaseLayout.astro";
import { Image } from "astro:assets";

// Content
import aboutUs from "@/images/team/gas-boiler-installation-brighton-ac-plumbers.jpg";
import aboutUs1 from "@/images/team/gas-safe-check-boiler-brighton-ac-plumbers.png";
// Components
import AboutHero from "@/components/about/AboutHero.astro";
import AboutTimeline from "@/components/about/AboutTimeline.astro";
import AboutCertification from "@/components/about/AboutCertification.astro";
import AboutStats from "@/components/about/AboutStats.astro";
import AboutContactCTA from "@/components/about/AboutContactCTA.astro";
---

<BaseLayout>
  <!-- Skip to main content link for accessibility -->
  <a
    href="#main-content"
    class="sr-only z-50 rounded-md bg-primary-600 px-4 py-2 text-background-00 focus:not-sr-only focus:absolute focus:top-4 focus:left-4 focus:ring-2 focus:ring-primary-600 focus:ring-offset-2"
  >
    Skip to main content
  </a>

  <div class="bg-background-00">
    <main id="main-content" class="isolate">
      <!-- Hero section -->
      <AboutHero />
      <!-- Company Story Timeline -->
      <AboutTimeline />
      <!-- Trust & Certifications -->
      <AboutCertification />

      <!-- Our Team & Values -->
      <section
        class="mt-32 overflow-hidden sm:mt-40"
        aria-labelledby="team-title"
      >
        <div class="mx-auto max-w-7xl px-6 lg:flex lg:px-8">
          <div
            class="mx-auto grid max-w-2xl grid-cols-1 gap-x-12 gap-y-16 lg:mx-0 lg:max-w-none lg:min-w-full lg:flex-none lg:gap-y-8"
          >
            <div class="lg:col-end-1 lg:w-full lg:max-w-lg lg:pb-8">
              <h2
                id="team-title"
                class="text-4xl font-bold tracking-tight text-primary-600 sm:text-5xl"
              >
                Our Expert Team
              </h2>
              <p class="mt-6 text-xl/8 text-text-00">
                Meet the skilled professionals who bring decades of combined
                experience to every project, ensuring quality workmanship and
                customer satisfaction.
              </p>
              <p class="mt-6 text-base/7 text-text-00">
                Our team consists of Gas Safe registered engineers, certified
                plumbers, and heating specialists who stay up-to-date with the
                latest industry standards and technologies.
              </p>

              <div class="mt-8 space-y-4">
                <div class="flex items-center gap-x-3">
                  <div class="flex-none rounded-full bg-accent-500/10 p-1">
                    <div class="h-2 w-2 rounded-full bg-accent-500"></div>
                  </div>
                  <p class="text-sm leading-6 text-text-00">
                    24/7 Emergency Response
                  </p>
                </div>
                <div class="flex items-center gap-x-3">
                  <div class="flex-none rounded-full bg-accent-500/10 p-1">
                    <div class="h-2 w-2 rounded-full bg-accent-500"></div>
                  </div>
                  <p class="text-sm leading-6 text-text-00">
                    All Work Guaranteed
                  </p>
                </div>
                <div class="flex items-center gap-x-3">
                  <div class="flex-none rounded-full bg-accent-500/10 p-1">
                    <div class="h-2 w-2 rounded-full bg-accent-500"></div>
                  </div>
                  <p class="text-sm leading-6 text-text-00">
                    Free Quotes & Estimates
                  </p>
                </div>
              </div>
            </div>

            <div
              class="flex flex-wrap items-start justify-end gap-6 sm:gap-8 lg:contents"
            >
              <div
                class="w-0 flex-auto lg:ml-auto lg:w-auto lg:flex-none lg:self-end"
              >
                <Image
                  src={aboutUs}
                  alt="Qualified AC Plumbers engineer installing a high-efficiency gas boiler in a Brighton home with sea view."
                  class="aspect-[7/5] w-[37rem] max-w-none rounded-2xl bg-gray-50 object-cover shadow-lg"
                  loading="lazy"
                  width="592"
                  height="422"
                />
              </div>

              <div
                class="contents lg:col-span-2 lg:col-end-2 lg:ml-auto lg:flex lg:w-[37rem] lg:items-start lg:justify-end lg:gap-x-8"
              >
                <div
                  class="order-first flex w-64 flex-none justify-end self-end lg:w-auto"
                >
                  <img
                    src="/images/services/gas-boiler-installation.jpeg"
                    alt="Professional gas boiler installation by AC Plumbers certified engineer"
                    class="aspect-[4/3] w-[24rem] max-w-none flex-none rounded-2xl bg-gray-50 object-cover shadow-lg"
                    loading="lazy"
                    width="384"
                    height="288"
                  />
                </div>

                <div
                  class="flex w-96 flex-auto justify-end lg:w-auto lg:flex-none"
                >
                  <Image
                    src={aboutUs1}
                    alt="Central heating installation work being performed by AC Plumbers specialist"
                    class="aspect-[7/5] w-[37rem] max-w-none flex-none rounded-2xl bg-gray-50 object-cover shadow-lg"
                    loading="lazy"
                    width="592"
                    height="422"
                  />
                </div>

                <div
                  class="hidden sm:block sm:w-0 sm:flex-auto lg:w-auto lg:flex-none"
                >
                  <img
                    src="/images/services/smart-thermostats.jpeg"
                    alt="Smart thermostat installation showcasing modern heating technology"
                    class="aspect-[4/3] w-[24rem] max-w-none rounded-2xl bg-gray-50 object-cover shadow-lg"
                    loading="lazy"
                    width="384"
                    height="288"
                  />
                </div>
              </div>
            </div>
          </div>
        </div>
      </section>
      <!-- Statistics -->
      <AboutStats />
      <!-- Contact CTA -->
      <AboutContactCTA />
      <!-- Bottom spacing -->
      <div class="pb-32 sm:pb-40" aria-hidden="true"></div>
    </main>
  </div>
</BaseLayout>
