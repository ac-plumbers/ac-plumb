      <p class='text-lg font-poppins'>
        This section uses a left-to-right gradient from your primary to
        secondary color.
      </p>
    </section>

    <!-- Gradient Section 2 -->
    <section
      class='rounded-xl p-10 my-12 text-white'
      style='
        background: linear-gradient(135deg, var(--color-accent-500) 0%, var(--color-primary-400) 100%);
      '>
      <h2 class='text-3xl font-bold mb-2 font-nunito'>
        Gradient Section: Accent â†’ Primary
      </h2>
      <p class='text-lg font-poppins'>
        This section uses a diagonal gradient from your accent to a lighter
        primary color.
      </p>
    </section>
    <!-- Form -->
    <Form />
    <!-- Services -->
    <Services />
  </main>
</BaseLayout>

<script>
  // Add fun interactive effects
  document.addEventListener('DOMContentLoaded', () => {
    const funButton = document.getElementById('fun-button');

    if (funButton) {
      // Add confetti effect on hover
      funButton.addEventListener('mouseenter', () => {
        // Create and append small particles
        for (let i = 0; i < 10; i++) {
          createParticle(funButton);
        }
      });

      // Create a single particle
      function createParticle(button: HTMLElement) {
        const particle = document.createElement('span');

        // Random size
        const size = Math.floor(Math.random() * 8 + 6);

        // Random position relative to button
        const x = Math.random() * button.offsetWidth;
        const y = button.offsetHeight;

        // Random colors from your palette
        const colors = [
          'var(--color-primary-300)',
          'var(--color-secondary-300)',
          'var(--color-accent-300)',
        ];
        const color = colors[Math.floor(Math.random() * colors.length)];

        // Apply styles
        particle.style.position = 'absolute';
        particle.style.width = `${size}px`;
        particle.style.height = `${size}px`;
        particle.style.background = color;
        particle.style.borderRadius = '50%';
        particle.style.left = `${x}px`;
        particle.style.top = `${y}px`;
        particle.style.pointerEvents = 'none';
        particle.style.zIndex = '10';

        // Add to button
        button.appendChild(particle);

        // Animate particle
        const animation = particle.animate(
          [
            { transform: `translate(0, 0)`, opacity: 1 },
            {
              transform: `translate(${Math.random() * 50 - 25}px, -${Math.random() * 60 + 50}px)`,
              opacity: 0,
            },
          ],
          {
            duration: 1000 + Math.random() * 1000,
            easing: 'cubic-bezier(0, .9, .57, 1)',
          }
        );

        // Remove particle when animation completes
        animation.onfinish = () => {
          particle.remove();
        };
      }
    }
  });
</script>
