---
import Layout from '../layouts/Layout.astro';
---

<Layout>
  <main class='max-w-5xl mx-auto space-y-12'>
    <!-- Title -->
    <header>
      <h1 class='text-3xl sm:text-4xl font-bold'>ðŸŽ¨ AC Plumb Brand Preview</h1>
      <p class='text-primary-500 mt-2 text-lg'>
        Main colors & typography showcase
      </p>
    </header>

    <!-- Main Colors -->
    <section>
      <h2 class='text-2xl font-semibold mb-4'>Main Colors</h2>
      <div class='grid grid-cols-2 sm:grid-cols-3 md:grid-cols-4 gap-4'>
        <!-- Primary -->
        <div class='rounded overflow-hidden shadow border'>
          <div class='h-20 bg-primary-500'></div>
          <div class='p-2 text-center text-sm'>Primary 500</div>
        </div>
        <!-- Secondary -->
        <div class='rounded overflow-hidden shadow border'>
          <div class='h-20 bg-secondary-500'></div>
          <div class='p-2 text-center text-sm'>Secondary 500</div>
        </div>
        <!-- Accent -->
        <div class='rounded overflow-hidden shadow border'>
          <div class='h-20 bg-accent-500'></div>
          <div class='p-2 text-center text-sm'>Accent 500</div>
        </div>
        <!-- Neutral -->
        <div class='rounded overflow-hidden shadow border'>
          <div class='h-20 bg-neutral-300'></div>
          <div class='p-2 text-center text-sm'>Neutral 300</div>
        </div>
      </div>
    </section>

    <!-- Buttons Showcase -->
    <section>
      <h2 class='text-2xl font-semibold mb-4'>Buttons</h2>
      <div class='flex flex-wrap gap-4'>
        <button
          class='px-6 py-2 rounded font-semibold text-white bg-primary-500 hover:bg-primary-600 transition'
          >Primary</button
        >
        <button
          class='px-6 py-2 rounded font-semibold text-white bg-secondary-500 hover:bg-secondary-600 transition'
          >Secondary</button
        >
        <button
          class='px-6 py-2 rounded font-semibold text-white bg-accent-500 hover:bg-accent-600 transition'
          >Accent</button
        >
        <button
          class='px-6 py-2 rounded font-semibold text-neutral-900 bg-neutral-100 hover:bg-neutral-200 border border-neutral-300 transition'
          >Neutral</button
        >
        <button
          class='px-6 py-2 rounded font-semibold text-primary-500 border-2 border-primary-500 bg-transparent hover:bg-primary-50 transition'
          >Outline Primary</button
        >
      </div>
    </section>

    <!-- Typography -->
    <section>
      <h2 class='text-2xl font-semibold mb-4'>Typography</h2>
      <div class='space-y-3'>
        <h1 class='text-4xl font-bold'>Heading 1 â€“ 4xl</h1>
        <h2 class='text-3xl font-semibold'>Heading 2 â€“ 3xl</h2>
        <h3 class='text-2xl font-medium'>Heading 3 â€“ 2xl</h3>
        <p class='text-base text-text-100'>
          This is a paragraph of default text. It uses <code
            >--color-text-100</code
          > and the base font size.
        </p>
        <p class='text-sm text-text-50'>
          This is secondary text using <code>--color-text-50</code>.
        </p>
      </div>
    </section>
  </main>
</Layout>
