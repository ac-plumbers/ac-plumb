---
import BaseLayout from "@/layouts/BaseLayout.astro";
---

<BaseLayout>
  <main class="relative isolate min-h-full">
    <img
      src="https://images.unsplash.com/photo-1545972154-9bb223aac798?ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&ixlib=rb-1.2.1&auto=format&fit=crop&w=3050&q=80&exp=8&con=-15&sat=-75"
      alt="Plumber working, background image"
      class="absolute inset-0 -z-10 size-full object-cover object-top"
    />
    <div class="mx-auto max-w-7xl px-6 py-32 text-center sm:py-40 lg:px-8">
      <p class="text-base font-semibold text-white">404</p>
      <h1
        class="font-poppins mt-4 text-5xl font-semibold tracking-tight text-balance text-white sm:text-7xl"
      >
        Page not found
      </h1>
      <p
        class="mt-6 font-inconsolata text-lg font-medium text-pretty text-white/70 sm:text-xl"
      >
        Sorry, we couldn’t find the page you’re looking for.<br />
        Need help? Try searching for a service or contact our team!
      </p>
      <div class="mt-10 flex flex-col items-center gap-4">
        <a
          href="/services"
          class="inline-block rounded bg-primary-600 px-4 py-2 font-semibold text-white transition hover:bg-primary-700"
        >
          View Our Services
        </a>
        <a
          href="/contact"
          class="inline-block rounded bg-accent-500 px-4 py-2 font-semibold text-white transition hover:bg-accent-600"
        >
          Contact Us
        </a>
      </div>
      <div class="mt-10 flex justify-center">
        <a href="/" class="text-sm font-semibold text-white hover:underline"
          ><span aria-hidden="true">&larr;</span> Back to home</a
        >
      </div>
      <!-- Quick links to featured services (example) -->
      <div class="mt-12 flex flex-wrap justify-center gap-3">
        <a
          href="/services/emergency-repairs"
          class="rounded bg-primary-700 px-3 py-1 text-sm font-medium text-white transition hover:bg-primary-800"
          >Emergency Repairs</a
        >
        <a
          href="/services/boiler-installation"
          class="rounded bg-primary-700 px-3 py-1 text-sm font-medium text-white transition hover:bg-primary-800"
          >Boiler Installation</a
        >
        <a
          href="/services/drain-unblocking"
          class="rounded bg-primary-700 px-3 py-1 text-sm font-medium text-white transition hover:bg-primary-800"
          >Drain Unblocking</a
        >
      </div>
    </div>
  </main>
</BaseLayout>
